@model TCMPLApp.WebApp.Models.IncidentCloseViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

<form asp-controller="Incident"
      asp-action="CloseIncident"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)" 
      data-ajax-success="onDataTableReloadSuccess"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Reportid)

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Close incident report"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Close incident report"]</h5>
            </div>            
            <div class="card-block">
                <div class="form-group">
                    <label asp-for="CorrectiveActions">Corrective actions (max. 200 characters)</label> 
                    <textarea asp-for="CorrectiveActions" rows="2" class="form-control" maxlength="200" required ></textarea>
                    <span asp-validation-for="CorrectiveActions" class="text-danger"></span>                                       
                </div>
                <div class="form-group">
                    <label asp-for="Closer">Closer (max. 200 characters)</label> 
                    <textarea asp-for="Closer" rows="2" class="form-control" maxlength="200" required ></textarea>
                    <span asp-validation-for="Closer" class="text-danger"></span>                     
                </div>
                <div class="form-group">
                    <label asp-for="CloserDate">Closer date</label>                   
                    <input asp-for="CloserDate" class="form-control required" type="date" required/>
                    <span asp-validation-for="CloserDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AttchmentLink"></label>
                    <input asp-for="AttchmentLink" class="form-control" type="text" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
