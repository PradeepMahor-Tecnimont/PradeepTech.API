@{
    ViewData["Title"] = "Home Page";

}

@section BreadCrumbs
    {
    <ol class="breadcrumb">
        <li class="breadcrumb-item active" aria-current="page">HSE</li>
    </ol>
}

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
    <style>
        #tbGrid.table td, #tbGrid.table th {
            padding: 0.2rem !important;
        }
    </style>
}

<div class="col-sm-12">
    <div class="row">
        <div class="col-md-4 col-xl-3">
            <div class="card card-tpl">
                <div class="card-header">
                    <h5>Incident Preliminary Report</h5>
                </div>
                <div class="card-block card-tile">
                    <a href="@Url.Action("IncidentIndex", "Home", new { Area = "HSE" })">
                        <div class="row align-items-center justify-content-center stretched-link">
                            <div class="col">
                                <h7 class="mb-2 f-w-300"></h7>
                            </div>
                            <div class="col-auto">
                                <i class="fas fa-ambulance f-20 text-white theme-brown"></i>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <environment include="Development, Staging">            
            @if (@ViewBag.ActiveQuiz == "1")
            {
                <div class="col-md-4 col-xl-3">
                    <div class="card card-tpl">
                        <div class="card-header header-flex">
                            <h5>@ViewBag.QuizTitle</h5>
                        </div>
                        <div class="card-block card-tile">
                            <a href="@Url.Action("HSEQuizIndex", "HSEQuiz", new { Area = "HSE" })">
                                <div class="row align-items-center justify-content-center stretched-link">
                                    <div class="col">
                                        <div class="row align-items-center justify-content-center stretched-link">
                                            &#160
                                            @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.HSE.HSEHelper.ActionIncidentAdmin) && @ViewBag.EmployeeCount != "0")
                                            {
                                                <div class="col-12 text-black">Quiz attempted by @ViewBag.EmployeeCount employees</div>
                                            }
                                        </div>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-list-alt f-20 text-white theme-light-teal"></i>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </environment>
    </div>
</div>