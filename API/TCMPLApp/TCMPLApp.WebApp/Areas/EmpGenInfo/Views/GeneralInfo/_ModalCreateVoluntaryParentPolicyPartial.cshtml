@model TCMPLApp.WebApp.Models.VoluntaryParentPolicyCreateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="GeneralInfo"
      asp-action="VoluntaryParentPolicyCreate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="localLoadDataTable(null); localScript();"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.Dob" />
    <input type="hidden" asp-for="@Model.Employee" />
    <input type="hidden" asp-for="@Model.Empno" />
    <input type="hidden" id="showInsuredSumDropdownlist" value="@ViewBag.ShowInsuredSumDropdownlist" />

    <div class="modal-header">
        <h5 class="modal-title">Voluntary Parents Policy</h5>
        <button id="closeBtn" type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Add member"]</h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name " class="form-control" placeholder="Name" maxlength="50" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Relation" class="control-label"></label>
                            <select asp-for="Relation" class="form-control chosen-select-required" data-placeholder=" Please select..." asp-items="ViewBag.VppRelations" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Relation" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Dob" class="control-label"></label>
                            <input id="dob" class="form-control datepicker" placeholder="@localizer["Date of birth"]" value="" readonly required />
                            <span asp-validation-for="Dob" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Gender" class="control-label"></label>
                            <select asp-for="Gender" class="form-control chosen-select-required" data-placeholder="Please select..." required>
                                <option selected></option>
                                <option value="MALE">Male</option>
                                <option value="FEMALE">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12" @ViewBag.ShowInsuredSumDropdownlist>
                            <label asp-for="InsuredSumId" class="control-label"></label>
                            <select asp-for="InsuredSumId" class="form-control chosen-select-required" data-placeholder=" Please select..." asp-items="ViewBag.SumInsureds" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="InsuredSumId" class="text-danger"></span>                            
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button id="cancelBtn" class=" btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

