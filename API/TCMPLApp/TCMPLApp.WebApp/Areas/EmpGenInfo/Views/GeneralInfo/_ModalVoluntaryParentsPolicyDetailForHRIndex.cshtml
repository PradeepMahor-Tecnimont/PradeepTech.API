@model TCMPLApp.WebApp.Models.HRVoluntaryParentPolicyDetailViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="GeneralInfo"
      asp-action=""
      id="formVoluntaryParentsPolicyDetailList"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" id="PApplicationId" name="PApplicationId" value="@Model.hrVoluntaryParentPolicyDetail.PApplicationId" />

    <div class="modal-header">
        <h5 class="modal-title">Voluntary parents policy detail list</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">

                <h5>@localizer["Voluntary parents policy detail list"]</h5>
                @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.WebApp.Classes.ActionFeatureHelper.ActionFeatureVpp))
                {
                    <button title="UnLock" class="btn btn-outline-danger btn-sm border-none float-right  "
                            onclick="showDeleteConfirmationPopup(event,this);"
                            data-jqueryselector="showconfirmationmodal"
                            data-url="@Url.Action("VoluntaryParentPolicyUnLock", "GeneralInfo", new { Area = "EmpGenInfo" })"
                            data-id="@Model.hrVoluntaryParentPolicyDetail.PApplicationId"
                            data-redirecturl="@Url.Action("VoluntaryParentPolicyForHRIndex", "GeneralInfo", new { Area = "EmpGenInfo" })"
                            data-modaltitle="Please Confirm!"
                            data-confirmationtext="Do you want to unlock @Model.hrVoluntaryParentPolicyDetail.PEmployee  ?"
                            data-confirmationtype="warning"
                            data-confirmbuttontext="UnLock">
                        <i class="fas fa-unlock" aria-hidden="true"> </i> UnLock
                    </button>
                }
            </div>

            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PEmployee)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.hrVoluntaryParentPolicyDetail.PEmployee)
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PInsuredSumWords)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.hrVoluntaryParentPolicyDetail.PInsuredSumWords)
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PPremiumAmt)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.hrVoluntaryParentPolicyDetail.PPremiumAmt)
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PGstAmt)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.hrVoluntaryParentPolicyDetail.PGstAmt)
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PTotalPremium)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.hrVoluntaryParentPolicyDetail.PTotalPremium)
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.hrVoluntaryParentPolicyDetail.PIsLock)
                                </div>
                                <div class="dd-met">
                                    @if (Model.hrVoluntaryParentPolicyDetail.PIsLock != "0")
                                    {
                                        @Html.Raw("Locked")
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div style="overflow:auto">
                    <table id="tbDataGridPreviousModel" class="table table-bordered  table-hover  w-100 " style="width:100%!important">
                        <thead class="bg-info text-white">
                            <tr class="font-weight-bold">
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Relation)</th>
                                <th>@Html.DisplayNameFor(model => model.Dob)</th>
                                <th>@Html.DisplayNameFor(model => model.Gender)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">

        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>