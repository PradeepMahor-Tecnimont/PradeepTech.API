@model TCMPLApp.WebApp.Models.BulkActionEditViewModel

@Html.AntiForgeryToken()
<form asp-controller="EmpGenInfoDetails"
      asp-action="BulkActionEdit"
      id="formBulkActionEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);loadEmpLockStatusDetailsDataTable()"
      data-ajax-success="PostSave(data);onDataTableReloadSuccess;"
      data-ajax-failure="onError"
      accept-charset="UTF-8">
    <div class="modal-header">
        <h5 class="modal-title">Bulk Lock / Open</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Bulk Lock / Open</h5>
            </div>
            <div class="card-block">
                <div class="card-pill">
                    <ul class="nav nav-tabs" id="tabs-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="tabs-BulkLockIndex-tab" data-toggle="pill" href="#tabs-BulkLockIndex" role="tab" aria-controls="tabs-BulkLockIndex" aria-selected="true">Locked</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tabs-open-tab" data-toggle="pill" href="#tabs-open" role="tab" aria-controls="tabs-open" aria-selected="true">Open</a>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    @await Html.PartialAsync("_LoaderPartial")

                    <div class="tab-pane fade show active" id="tabs-BulkLockIndex" role="tabpanel" aria-labelledby="tabs-BulkLockIndex-tab">
                        <div id="pw-locked">
                            @await Html.PartialAsync("_BulkActionLockPartial.cshtml", Model)
                        </div>
                    </div>
                    <div class="tab-pane fade" id="tabs-open" role="tabpanel" aria-labelledby="tabs-open-tab">
                        <div id="pw-open">
                            @await Html.PartialAsync("_BulkActionOpenPartial.cshtml", Model)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>"Waiting..."'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
@section Scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


