@model TCMPLApp.WebApp.Models.BGAmendmentCreateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="BGMain"
      asp-action="AmendmentEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onSuccessTab('amendment');PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">
    
    @Html.HiddenFor(m => m.Refnum)
    @Html.HiddenFor(m => m.Amendmentnum)
    @Html.HiddenFor(m => m.Bgrecdt)

    <div class="modal-header">
        <h5 class="modal-title">New amendment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Edit amendment"] - @Model.Amendmentnum</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Bgrecdt" class="control-label"></label>
                            <input id="bgrecdt" class="form-control datepicker" value="@Model.Bgrecdt?.ToString("dd-MMM-yyyy")" required/>
                            <span asp-validation-for="Bgrecdt" class="text-danger"></span>
                            <span asp-validation-for="Bgrecdt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Currid" class="control-label"></label>
                            <select asp-for="Currid" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.Currencies" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Currid" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Bgamt" class="control-label"></label>
                            <input asp-for="Bgamt" class="form-control" value="@Model.Bgamt" required />
                            <span asp-validation-for="Bgamt" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Convrate" class="control-label"></label>
                            <input asp-for="Convrate" class="form-control" value="@Model.Convrate" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">                            
                            <label asp-for="Bgaccept" class="control-label"></label>
                            <select asp-for="Bgaccept" class="form-control Select2" data-placeholder="@localizer["Optional"]" asp-items="ViewBag.AcceptableList">
                                <option value="" selected></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Bgacceptrmk" class="control-label"></label>
                            <input type="textarea" asp-for="Bgacceptrmk" class="form-control" value="@Model.Bgacceptrmk" />
                        </div>
                    </div>
                </div>              

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>


