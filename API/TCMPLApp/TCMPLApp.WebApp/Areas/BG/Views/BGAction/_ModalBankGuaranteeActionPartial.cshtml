@model TCMPLApp.WebApp.Models.BGMasterActionUpdateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

@{
 const string StatusTypeIdS04 = "S04";
 const string StatusTypeIdS05 = "S05";
 const string StatusTypeIdS06 = "S06";
}

<form asp-controller="BGAction"
      asp-action="BGAction"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Refnum)
    @Html.HiddenFor(m => m.bgMasterDetail.PBgnum)
    @Html.HiddenFor(m => m.bgAmendmentDetail.PAmendmentnum)

    <div class="modal-header">
        <h5 class="modal-title">BG action</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@Model.bgMasterDetail.PBgnum</h5>
            </div>
            <div class="card-block">
                <div class="card-pill">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.StatusTypeDesc)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.StatusTypeDesc)</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PBgamt)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.bgAmendmentDetail.PBgamt)</div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PCurrid)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.bgAmendmentDetail.PCurrid) - @Html.DisplayFor(model => model.bgAmendmentDetail.PCurrdesc)</div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PConvrate)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.bgAmendmentDetail.PConvrate)</div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PBgrecdt)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.bgAmendmentDetail.PBgrecdt)</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="form-group col-mb-12 col-xl-12">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PDocurl)</div>
                                <div class="dd-met">
                                    <a target="_blank" href="@Model.bgAmendmentDetail.PDocurl" class="outline-info-style">
                                        @localizer["View"] &nbsp;
                                        <i class="fas fa-external-link-alt" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PBgaccept)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.bgAmendmentDetail.PBgaccept)</div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12 ">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.bgAmendmentDetail.PBgacceptrmk)</div>
                                <div class="dd-met">
                                    @if (!String.IsNullOrEmpty(Model.bgAmendmentDetail.PBgacceptrmk))
                                    {
                                        @Html.Raw(System.Web.HttpUtility.HtmlEncode(Model.bgAmendmentDetail.PBgacceptrmk).Replace("\n", "<br/>"))
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                    @if (Model.StatusTypeId != StatusTypeIdS04 && Model.StatusTypeId != StatusTypeIdS05 && Model.StatusTypeId != StatusTypeIdS06)
                    {
                        <hr />
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-12 ">
                                    <label asp-for="StatusTypeId" class="control-label"></label>
                                    <select asp-for="StatusTypeId" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.StatusTypeList" required>
                                        <option selected></option>
                                    </select>
                                    <span asp-validation-for="StatusTypeId" class="text-danger"></span>
                                </div>                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @if (Model.StatusTypeId != StatusTypeIdS04 && Model.StatusTypeId != StatusTypeIdS05 && Model.StatusTypeId != StatusTypeIdS06)
        {
            <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        }
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>


