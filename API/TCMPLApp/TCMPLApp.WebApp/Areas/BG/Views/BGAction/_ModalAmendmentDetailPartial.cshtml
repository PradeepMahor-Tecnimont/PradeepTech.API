@model TCMPLApp.WebApp.Models.BGAmendmentDetailViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<div class="modal-header">
    <h5 class="modal-title">Detail amendment</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-header">
            <h5>@localizer["Amendment"] - @Model.Amendmentnum</h5>
        </div>
        <div class="card-block">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="dt-met">@localizer["Status"]</div>
                        <div class="dd-met">@ViewBag.AmendmentStatus</div>
                    </div>
                </div>
            </div>
            <div class="row">                
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Bgamt)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Bgamt)</div>
                    </div>                
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Currid)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Currid) - @Html.DisplayFor(model => model.Currdesc)</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Convrate)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Convrate)</div>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Bgrecdt)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Bgrecdt)</div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="form-group col-mb-12 col-xl-12">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Docurl)</div>
                        <div class="dd-met">
                            <a target="_blank" href="@Model.Docurl" class="outline-info-style">
                                @localizer["View"] &nbsp;
                                <i class="fas fa-external-link-alt" aria-hidden="true"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Bgaccept)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Bgaccept)</div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12 ">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Bgacceptrmk)</div>
                        <div class="dd-met">
                            @if (!String.IsNullOrEmpty(Model.Bgacceptrmk))
                            {
                                @Html.Raw(System.Web.HttpUtility.HtmlEncode(Model.Bgacceptrmk).Replace("\n", "<br/>"))
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
</div>
