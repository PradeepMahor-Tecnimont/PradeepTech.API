@model TCMPLApp.WebApp.Models.EmpLocationMappingViewModel
@{
    ViewData["Title"] = "Employee - location mapping";
}

@Html.AntiForgeryToken()

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="DeskBooking">Desk Booking</a></li>
        <li class="breadcrumb-item active" aria-current="page">Employee - location mapping</li>
    </ol>
}

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<div class="container-fluid bg-white border rounded shadow m-auto col-xl-11 p-2 ">
    <div class="app-h4 app-card-header mb-2">
        <p>Employee - location mapping</p>
    </div>
    <div class="d-flex flex-row">
        <a title="New Employee - location mapping" class="btn btn-outline-primary btn-sm border border-white" href="#"
           data-jqueryselector="openmodal"
           data-modalcontainer="modalcontainer"
           data-modalpopupwidth="rightw35"
           data-url='@Url.Action("EmpLocationMapCreate", "Bookings", new { Area = "DeskBooking" })'
           data-statichtmlsourcedivid=""
           data-modaltitle="New Employee - location mapping"
           data-modalheader="New Employee - location mapping">
            <i class="fas fa-plus"></i> Create
        </a>
        <a style="float:right" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
           href="#"
           data-jqueryselector="binarydownload"
           data-url="@(Url.Action("EmpLocationMapExcelDownload", "Bookings", new { Area = "DeskBooking" }))">
            <i class="fas fa-file-excel green-color"></i>&nbsp;Export
        </a>
    </div>
    <div class="m-1"></div>
    <div class="bg-gray-active rounded ">
        <div class="input-group pt-1 pl-1 pr-1 ">
            <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
            </div>
        </div>

        <table id="tbEmpLocationMap" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Empno)</th>
                    <th>@Html.DisplayNameFor(model => model.Emptype)</th>
                    <th>@Html.DisplayNameFor(model => model.BaseLocation)</th>
                    <th>@Html.DisplayNameFor(model => model.Costcode)</th>
                    <th>@Html.DisplayNameFor(model => model.OfficeLocationCode)</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
        </table>

        <div id="result"></div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {
            loadEmpLocationMapDataTable();
        });

        function localScript() {
            initSelect2();
        }
        let vVUloadEmpLocationMapList = "@Url.Action("GetListsEmpLocationMapping", "Bookings")";

        function loadEmpLocationMapDataTable() {
            genericLoadDataTable({
                pDataTableId: "#tbEmpLocationMap",
                pColumns: datatableEmpLocationMapColumns,
                pUrl: vVUloadEmpLocationMapList,
                PStateSave: false,
                pUrlParams: {
                    genericSearch: $('#GenericSearch').val() ? $('#GenericSearch').val() : null,
                },
                pRequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()

            });
        };

        @if ((bool)@Context.Items["isMobile"] == false)
        {
            <text>
                let datatableEmpLocationMapColumns = [
                    {
                        data: null,
                        render: function (data, type, row) {
                            return data.empno + " - " + data.name
                        }
                    },
                    { data: "emptype" },
                    { data: "baseLocation" },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return data.costcode + " - " + data.costcodeName
                        }
                    },

                    { data: "officeLocationCodeDesc" },
                    {
                        'data': null,
                        render: function (data, type, row) {
                            return '<button title="Delete" class="btn btn-outline-danger btn-sm border-none " ' +
                                ' onclick = "showDeleteConfirmationPopup(event,this);" ' +
                                ' data-jqueryselector = "showconfirmationmodal" ' +
                                ' data-url="@Url.Action("EmpLocationMapDelete", "Bookings", new { Area = "DeskBooking" })"' +
                                ' data-id="' + data.keyId + '"' +
                                ' data-PostDeleteReLoadDataTables="OK" ' +
                                ' data-modaltitle="Please Confirm!" ' +
                                ' data-confirmationtext="Do you want to Delete Emp location Map details :-' + data.name + ' " ' +
                                ' data-confirmationtype="warning" ' +
                                ' title="Delete Emp location Map" ' +
                                ' data-confirmbuttontext="Delete" > ' +
                                ' <i class="fas fa-trash" aria-hidden="true"></i> ' +
                                ' </button>';
                        },
                        'className': "td-icon text-center  align-middle",
                    },
                ];
            </text>
        }

            function PostSave(data) {
                if (data.success) {
                    $("#modalcontainer").modal('hide');
                    hideLoader();
                    loadEmpLocationMapDataTable();
                    notify('success', data.response, 'Success');
                }
            }

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadEmpLocationMapDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {

            if ($("#GenericSearch").length) {
                loadEmpLocationMapDataTable();
            }
        });

        function PostDeleteReLoadDataTables(data) {
            if (data.success) {
                loadEmpLocationMapDataTable();
                hideLoader();
                notify('success', data.message, 'Success');
            }
        };
    </script>
}