@model TCMPLApp.WebApp.Models.CostcodeChangeRequestIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Costcode change requests";
}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="DigiForm">Digi forms</a></li>
        <li class="breadcrumb-item"><a asp-action="CostcodeChangeIndex" asp-controller="HRDigiForm" asp-area="DigiForm">Costcode change</a></li>
        <li class="breadcrumb-item active" aria-current="page">Costcode change requests</li>
    </ol>
}

<div class="container-fluid bg-white border card rounded shadow m-auto col-xl-11 p-2">
    <div class="app-h4 app-card-header mb-2">
        <p>Costcode change requests</p>
    </div>
    <div class="d-flex flex-row">
        <a title="New Costcode Change Request" class="btn btn-outline-primary btn-sm border border-white" href="#"
           data-jqueryselector="openmodal"
           data-modalcontainer="modalcontainer"
           data-modalpopupwidth="rightw35"
           data-url='@Url.Action("CostcodeChangeRequestCreate", "HRDigiForm", new { Area = "DigiForm" })'
           data-statichtmlsourcedivid=""
           data-modaltitle="New Costcode Change Request"
           data-modalheader="New Costcode Change Request">
            <i class="fas fa-plus"></i> Create
        </a>
    </div>
    <div class="m-1"></div>
    <div class="bg-gray-active rounded ">
        <div class="input-group pt-1 pl-1 pr-1 ">
            <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <table id="tbCostcodeChangeRequest" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr role="row">
                    <th>&nbsp;</th>
                    <th>@Html.DisplayNameFor(model => model.EmpNo)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferTypeText)</th>
                    <th>@Html.DisplayNameFor(model => model.CurrentCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TargetCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EffectiveTransferDate)</th>
                    <th>@Html.DisplayNameFor(model => model.DesgcodeText)</th>
                    <th>@Html.DisplayNameFor(model => model.StatusText)</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
        </table>
        <div id="result"></div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_DigiFormDataTableColumnsPartial");
    }
    <script src="~/js/DigiForm.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            loadCostcodeChangeRequestDataTable();
        });

        function localScript() {
            initSelect2();
            initDatePicker();

            $("#TransferType").change(function () {
                if ($(this).val() == 1) {
                    $("#divTransferEndDate").show();
                    $('#divTransferEndDate').prop("required", true);

                    $("#SiteData").show();
                    $('#SiteCode').prop("required", true);
                } else {
                    $('#divTransferEndDate').prop("required", false);
                    $("#divTransferEndDate").hide();

                    $("#SiteData").hide();
                    $('#SiteCode').prop("required", false);
                }
            });


            $("#EmpNo").change(function (e) {
                var selected = $('#EmpNo').find(':selected');
                var vempno = selected[0].value;

                $.ajax({
                    url: '@Url.Action("GetEmployeeInfo", "HRDigiForm", new { Area = "DigiForm" })',
                    data: {
                        empno: vempno
                    },
                    type: 'POST',
                    dataType: "json",
                    beforeSend: function () {
                        showLoader();
                    },
                    success: function (data) {

                        if (data.success) {
                            $("#CurrentCostcodeName").val(data.currentCostcode + "-" + data.currentCostcodeName);
                            $("#CurrentCostcode").val(data.currentCostcode);

                            var targetCostcode = $('#TargetCostcode').val();
                            $.ajax({
                                url: '@Url.Action("GetCostcodeTarget", "HRDigiForm", new { Area = "DigiForm" })',
                                data: {
                                    currentCostcode: $('#CurrentCostcode').val()
                                },
                                type: 'POST',
                                dataType: "json",
                                beforeSend: function () {
                                    showLoader();
                                },
                                success: function (data) {
                                    let dropdown = $('#TargetCostcode');
                                    dropdown.empty();
                                    var flag = false;

                                    $(data).each(function () {
                                        if (this.targetCostcode == targetCostcode) {
                                            flag = true;
                                            $('<option selected="selected" value="' + this.dataValueField + '">' + this.dataTextField + '</option>').appendTo(dropdown);
                                        }
                                        else {
                                            $('<option value="' + this.dataValueField + '">' + this.dataTextField + '</option>').appendTo(dropdown);
                                        }
                                    });

                                    if (flag == false) {
                                        targetCostcode = null;
                                    }

                                    dropdown.val(targetCostcode);
                                    dropdown.trigger("change");
                                    hideLoader();
                                },
                                error: function (result) {
                                    hideLoader();
                                    notify($.i18n('Error'), result.responseText, 'danger');
                                }
                            });

                        }
                        else {
                            //$("#empDetails").hide();
                            notify("Error", data.response, "danger");
                        }

                        hideLoader();
                    },
                    error: function (result) {
                        hideLoader();
                        notify($.i18n('Error'), result.responseText, 'danger');
                    }
                });
            });
        };

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadCostcodeChangeRequestDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {
            if ($("#GenericSearch").length) {
                loadCostcodeChangeRequestDataTable();
            }
        });

        function SubmitForApproval() {
            $("#BtnName").val("SubmitForApproval");
            var frm = $('#formCostcodeChangeRequest');
            frm.submit();

        }

        function PostSave(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadCostcodeChangeRequestDataTable();
                notify('success', data.response, 'Success');
            }
        };

        function PostFilterReLoadDataTable(data) {
            $("#modalcontainer").modal('hide');

            loadCostcodeChangeRequestDataTable();
            hideLoader();
        }


    </script>
}