@model TCMPLApp.WebApp.Models.AnnualEvaluationIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "HR - Annual Evaluation Pending List";
}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="DigiForm">Digi forms</a></li>
        <li class="breadcrumb-item active" aria-current="page">HR - Annual evaluation Action list</li>

    </ol>
}
@Html.HiddenFor(m => m.FilterDataModel.IsActive)
<input readonly type="hidden" asp-for="@Model.FilterDataModel.Grade" />
<input readonly type="hidden" asp-for="@Model.FilterDataModel.Parent" />

<form asp-controller="HRDigiForm"
      asp-action="HRAnnualEvaluationSendDetails"
      id="formHRAnnualEvaluationEdit">

    <input type="hidden" asp-for="KeyId" name="id" id="KeyId" />
    <input type="hidden" asp-for="Empno" name="empno" id="Empno" />

</form>
<div class="container-fluid bg-white border card rounded shadow m-auto col-xl-11 p-2">
    <div class="app-h4 app-card-header mb-2">
        <p>HR - Annual Pending Evaluation</p>
    </div>
    <div class="d-flex flex-row">
        @*  <a title="GoTo History" class="btn btn-outline-primary btn-sm border border-white mx-2 "
        href="@Url.Action("HRAnnualEvaluationHistoryIndex", "HRDigiForm", new { Area = "DigiForm" })">
        <i class="fas fa-walking"></i> &nbsp;GoTo History
        </a> *@
        <a class="btn btn-outline-primary btn-sm filteredmarker-border border-white"
           data-jqueryselector="openmodal"
           data-modalcontainer="modalcontainer"
           data-modalpopupwidth="rightw35"
           data-url='@Url.Action("HRAnnualEvaluationPendingFilterGet", "HRDigiForm", new { Area = "DigiForm" })'
           data-modaltitle="Filters - Annual Evaluation"
           data-modalheader="Filters - Annual Evaluation">
            <i class="fas fa-filter"></i>&nbsp;Filters
        </a>

        <a class="btn btn-outline-danger btn-sm border-white filteredmarker-visibility m-l-5"
           data-actionid="HRAnnualEvaluationPendingIndex"
           data-url='@Url.Action("ResetFilter", "HRDigiForm", new { Area = "DigiForm" })'
           href="#"
           onclick="resetFilter(event, this);"
           style="display: none;">
            <i class="fas fa-filter"></i> Reset
        </a>
    </div>
    <div class="m-1"></div>
    <div class="bg-gray-active rounded ">
        <div class="input-group pt-1 pl-1 pr-1 ">
            <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <table id="tbHRActionAnnualEvaluation" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr role="row">
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Grade)</th>
                    <th>@Html.DisplayNameFor(model => model.Emptype)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.Assign)</th>
                    <th>@Html.DisplayNameFor(model => model.Parent)</th>
                    <th>@Html.DisplayNameFor(model => model.Doj)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th></th>

                </tr>
            </thead>
        </table>
        <div id="result"></div>
    </div>
</div>
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_DigiFormDataTableColumnsPartial");
    }
    <script src="~/js/DigiForm.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            loadHRAnnualActionPendingEvaluationDataTable();
        });

        function localScript() {
            initSelect2();
            initDatePicker();

        };

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadHRAnnualActionPendingEvaluationDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {

            if ($("#GenericSearch").length) {
                loadHRAnnualActionPendingEvaluationDataTable();
            }
        });

        function PostSave(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadHRAnnualActionPendingEvaluationDataTable();
                notify('success', data.response, 'Success');
            }
        };

        function SendDetails(id, empno) {

            $('#KeyId').val(id);
            $('#Empno').val(empno);
            var frm = $('#formHRAnnualEvaluationEdit');
            frm.submit();
        }

        function GotoDetails(id, empno) {

            $('#KeyId').val(id);
            $('#Empno').val(empno);
            var frm = $('#formHRAnnualEvaluationEdit');
            frm.submit();
        }

        function PostFilterReLoadDataTable(data) {

            $("#modalcontainer").modal('hide');


            $("#FilterDataModel_Grade").val(data.grade);
            $("#FilterDataModel_Parent").val(data.parent);

            loadHRAnnualActionPendingEvaluationDataTable();
            hideLoader();
        }
    </script>
}