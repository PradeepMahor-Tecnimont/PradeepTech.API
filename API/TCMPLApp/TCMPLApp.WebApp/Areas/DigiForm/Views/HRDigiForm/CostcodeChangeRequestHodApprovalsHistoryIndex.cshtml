@model TCMPLApp.WebApp.Models.CostcodeChangeRequestIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Costcode change Approvals History";
}

@section BreadCrumbs
    {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="DigiForm">Digi forms</a></li>
        <li class="breadcrumb-item"><a asp-action="CostcodeChangeIndex" asp-controller="HRDigiForm" asp-area="DigiForm">Costcode change</a></li>
        <li class="breadcrumb-item active" aria-current="page">Costcode change approvals history</li>
    </ol>
}
@Html.HiddenFor(m => m.FilterDataModel.IsActive)
<input readonly type="hidden" asp-for="@Model.FilterDataModel.CurrentCostcode" />
<input readonly type="hidden" asp-for="@Model.FilterDataModel.TargetCostcode" />

<div class="container-fluid bg-white border card rounded shadow m-auto col-xl-11 p-2">
    <div class="app-h4 app-card-header mb-2">
        <p>Costcode change approvals history</p>
    </div>
    <div class="d-flex flex-row">
        <a title="Pending Approvals" class="btn btn-outline-primary btn-sm border border-white mx-2 " 
           href="@Url.Action("CostcodeChangeRequestHODApprovalIndex", "HRDigiForm", new { Area = "DigiForm" })">
            <i class="fas fa-walking"></i> &nbsp;GoTo Pending
        </a>
        @if (CurrentUserIdentity.ProfileActions.Any(p => p.RoleId == TCMPLApp.Domain.Models.DigiForm.DigiFormHelper.RoleDGFormTransferCostcodeApprovalHR))
        {
            <a class="btn btn-outline-primary btn-sm filteredmarker-border border-white"
               data-jqueryselector="openmodal"
               data-modalcontainer="modalcontainer"
               data-modalpopupwidth="rightw35"
               data-url='@Url.Action("HrApprovalHistoryFilterGet", "HRDigiForm", new { Area = "DigiForm" })'
               data-modaltitle="Filters - Costcode Approvals"
               data-modalheader="Filters - Costcode Approvals">
                <i class="fas fa-filter"></i>&nbsp;Filters
            </a>
            <a class="btn btn-outline-danger btn-sm border-white filteredmarker-visibility m-l-5"
               data-actionid="HodApprovalsHistoryIndex"
               data-url='@Url.Action("ResetFilter", "HRDigiForm", new { Area = "DigiForm" })'
               href="#"
               onclick="resetFilter(event, this);"
               style="display: none;">
                <i class="fas fa-filter"></i> Reset
            </a>
            <a style="float:right" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
               href="#"
               data-jqueryselector="binarydownload"
               data-url="@(Url.Action("HrTransferCostcodeExcelDownload", "HRDigiForm", new { Area = "DigiForm" }))">
                <i class="fas fa-file-excel green-color"></i> Export
            </a>
        }
        
    </div>
    <div class="m-1"></div>
    <div class="bg-gray-active rounded ">
        <div class="input-group pt-1 pl-1 pr-1 ">
            <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <table id="tbHodApprovalsHistory" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr role="row">
                    <th>&nbsp;</th>
                    <th>@Html.DisplayNameFor(model => model.EmpNo)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferTypeText)</th>
                    <th>@Html.DisplayNameFor(model => model.CurrentCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TargetCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferDate)</th>
                    <th>@Html.DisplayNameFor(model => model.EffectiveTransferDate)</th>
                    <th>@Html.DisplayNameFor(model => model.DesgcodeText)</th>
                    <th>@Html.DisplayNameFor(model => model.ApprlActionDesc)</th>
                    <th>@Html.DisplayNameFor(model => model.StatusText)</th>
                </tr>
            </thead>
        </table>
        <div id="result"></div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_DigiFormDataTableColumnsPartial");
    }
    <script src="~/js/DigiForm.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            loadHodApprovalsHistoryDataTable();
        });

        function localScript() {
            initSelect2();
        };

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadHodApprovalsHistoryDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {
            if ($("#GenericSearch").length) {
                loadHodApprovalsHistoryDataTable();
            }
        });

        function PostSave(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadHodApprovalsHistoryDataTable();
                notify('success', data.response, 'Success');
            }
        };

        function PostFilterReLoadDataTable(data) {
            $("#modalcontainer").modal('hide');

            $("#FilterDataModel_CurrentCostcode").val(data.currentCostcode);
            $("#FilterDataModel_TargetCostcode").val(data.targetCostcode);
            loadHodApprovalsHistoryDataTable();
            hideLoader();
        }

    </script>
}