@model TCMPLApp.WebApp.Models.CostcodeChangeRequestIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}
@{
    ViewData["Title"] = "Approvals";
}

@section BreadCrumbs
    {
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="DigiForm">Digi forms</a></li>
        <li class="breadcrumb-item"><a asp-action="CostcodeChangeIndex" asp-controller="HRDigiForm" asp-area="DigiForm">Costcode change</a></li>
        <li class="breadcrumb-item active" aria-current="page">Costcode change approvals</li>
    </ol>
}

<div class="container-fluid bg-white border card rounded shadow m-auto col-xl-11 p-2">
    <div class="app-h4 app-card-header mb-2">
        <p>Costcode change approvals</p>
    </div>
    <div class="d-flex flex-row">
        <a title="Approvals History" class="btn btn-outline-primary btn-sm border border-white mx-2 "
           href="@Url.Action("CostcodeChangeRequestHodApprovalsHistoryIndex", "HRDigiForm", new { Area = "DigiForm" })">
            <i class="fas fa-walking"></i> &nbsp;GoTo History
        </a>
    </div>
    <div class="m-1"></div>
    <div class="bg-gray-active rounded ">
        <div class="input-group pt-1 pl-1 pr-1 ">
            <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
            <div class="input-group-append">
                <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
            </div>
        </div>
        <table id="tbHodApprovalsRequests" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr role="row">
                    <th>&nbsp;</th>
                    <th>@Html.DisplayNameFor(model => model.EmpNo)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferTypeText)</th>
                    <th>@Html.DisplayNameFor(model => model.CurrentCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TargetCostcode)</th>
                    <th>@Html.DisplayNameFor(model => model.TransferDate)</th>                    
                    <th>@Html.DisplayNameFor(model => model.EffectiveTransferDate)</th>
                    <th>@Html.DisplayNameFor(model => model.DesgcodeText)</th>
                    <th>@Html.DisplayNameFor(model => model.ApprlActionDesc)</th>
                    <th>@Html.DisplayNameFor(model => model.StatusText)</th>
                    <th>@Html.DisplayNameFor(model => model.Action)</th>
                </tr>
            </thead>
        </table>
        <div id="result"></div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("_DigiFormDataTableColumnsPartial");
    }
    <script src="~/js/DigiForm.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            loadHodApprovalsRequestsDataTable();
        });

        function localScript() {
            initSelect2();
            initDatePick();
        };

        function initDatePick() {
            
            $('.datepicker').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false,
                nowButton: true
            });

            $('#transferDate').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false,

            }).on('change', function (e, date) {
                $("#TransferDate").val(date.format('DD-MMM-YYYY'));                
                $('#transferEndDate').bootstrapMaterialDatePicker('setMinDate', new Date($("#TransferDate").val()));

                let transferDate = moment($("#TransferDate").val(), "DD-MMM-YYYY");
                let transferEndDate = moment($("#TransferEndDate").val(), "DD-MMM-YYYY");
                if (transferDate > transferEndDate) {
                    $("#TransferEndDate").val(date.format('DD-MMM-YYYY'));
                    $("#transferEndDate").val(date.format('DD-MMM-YYYY'));
                }                  
            });

            $('#transferEndDate').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false,
                
            }).on('change', function (e, date) {
                $("#TransferEndDate").val(date.format('DD-MMM-YYYY'));
            });

            $('#effectiveTransferDate').bootstrapMaterialDatePicker({
                format: 'DD-MMM-YYYY',
                weekStart: 0,
                time: false
            }).on('change', function (e, date) {
                $("#EffectiveTransferDate").val(date.format('DD-MMM-YYYY'));
            });

            if ($('#TransferDate').val()) {
                $('#transferDate').bootstrapMaterialDatePicker('setDate', new Date($("#TransferDate").val()));
                $('#transferEndDate').bootstrapMaterialDatePicker('setMinDate', new Date($("#TransferDate").val()));
            }
            if ($('#TransferEndDate').val()) {
                $('#transferEndDate').bootstrapMaterialDatePicker('setDate', new Date($("#TransferEndDate").val()));
            }
        }

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadHodApprovalsRequestsDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {
            if ($("#GenericSearch").length) {
                loadHodApprovalsRequestsDataTable();
            }
        });
        
        function PostSave(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadHodApprovalsRequestsDataTable();
                notify('success', data.response, 'Success');
            }
        };

        function PostFilterReLoadDataTable(data) {
            $("#modalcontainer").modal('hide');
            loadHodApprovalsRequestsDataTable();
            hideLoader();
        }

        function RejectForApproval(frmId) {            
            $("#BtnName").val("RejectApproval");
            // var frm = $('#formCostcodeChangeRequestHODApproval');
            var frm = $('#' + frmId);
            frm.submit();
        }
    </script>
}