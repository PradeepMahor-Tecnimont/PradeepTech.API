@model TCMPLApp.WebApp.Models.LcMainCloseEditViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="LetterOfCredit"
      asp-action="LcClosureEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onSuccessTab('acceptanceDetail');PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.ApplicationId)
    @Html.TextBoxFor(model => model.LcClPaymentDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" })


    <div class="modal-header">
        <h5 class="modal-title">Letter of credit closure</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Letter of credit closure"] </h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="LcClPaymentDate" class="control-label"></label>
                            <input id="lcClPaymentDate" class="form-control datepicker" placeholder="@localizer["LC closure payment date"]" value="" required />
                            <span asp-validation-for="LcClPaymentDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="LcClActualAmount" class="control-label"></label>
                            <input asp-for="LcClActualAmount" class="form-control" maxlength="15" placeholder="LC actual Amount" type="number" required />
                            <span asp-validation-for="LcClActualAmount" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="LcClOtherCharges" class="control-label"></label>
                            <input asp-for="LcClOtherCharges" class="form-control" maxlength="15" minlength="6 type="number" placeholder="Lc other Charges" required />
                            <span asp-validation-for="LcClOtherCharges" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="IsActive" class="control-label"></label>
                            <select asp-for="IsActive" class="form-control chosen-select" data-placeholder="Please select..." required>
                                <option selected></option>
                                <option value="1">Open</option>
                                <option value="0">Close</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="LcClRemarks" class="control-label"></label>
                            <textarea asp-for="LcClRemarks" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="LcClRemarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

