@model TCMPLApp.WebApp.Models.LcBankDetailsViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

<div class="card-deck">
    <div class="card shadow">
        <div class="card-block">
            <div style="display:none">
                @Html.HiddenFor(m => m.ApplicationId)
            </div>
            @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.LC.LCHelper.ActionEditLc))
            {
                @if (Model.SendToTreasury == 1 && Model.LcStatusVal == 1 && Model.CreateEditStatus == 0)
                {
                    <div class="row">
                        <a title="" class="btn btn-outline-primary btn-sm border-none ml-2 mr-2" href="#"
                   data-jqueryselector="openmodal"
                   data-modalcontainer="modalcontainer"
                   data-modalpopupwidth="rightw50"
                   data-url='@Url.Action("LcBankingCreate", "LetterOfCredit", new { Area = "LC" })'
                   data-statichtmlsourcedivid=""
                   data-id="@Model.ApplicationId"
                   data-modaltitle="Create banking"
                   data-modalheader="Create banking">
                            <i class="fas fa-plus"></i> Create
                        </a>
                    </div>
                    <hr />
                }
                @if (Model.SendToTreasury == 1 && Model.LcStatusVal == 1 && Model.CreateEditStatus == 1)
                {
                    <div class="row">
                        <a title="" class="btn btn-outline-primary btn-sm border-none ml-2 mr-2" href="#"
                   data-jqueryselector="openmodal"
                   data-modalcontainer="modalcontainer"
                   data-modalpopupwidth="rightw50"
                   data-url='@Url.Action("LcBankingEdit", "LetterOfCredit", new { Area = "LC" })'
                   data-statichtmlsourcedivid=""
                   data-id="@Model.ApplicationId"
                   data-modaltitle="Edit banking"
                   data-modalheader="Edit banking">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                    </div>
                    <hr />
                }

            }


            <div class="row p-1">

                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.IssuingBank)</div>
                        <div class="dd-met">@( Model.IssuingBank )</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.DiscountingBank)</div>
                        <div class="dd-met">@( Model.DiscountingBank)</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.AdvisingBank)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.AdvisingBank)</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.ValidityDate)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.ValidityDate)</div>
                    </div>
                </div>
            </div>
            @*<hr />*@
            <div class="row p-1">

                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.DurationTypeText)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.DurationTypeText)</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.TenureNoOfDays)</div>
                        <div class="dd-met">@( Model.TenureNoOfDays) </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.IssueDate)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.IssueDate)</div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.LCNumber)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.LCNumber)</div>
                    </div>
                </div> <div class="col-xl-3 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.PaymentDateEst)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.PaymentDateEst)</div>
                    </div>
                </div>
            </div>

        </div>
        <div class="col-xl-12 col-md-12">
            <div class="form-group">
                <div class="dt-met">@Html.DisplayNameFor(model => model.Remarks)</div>
                <div class="dd-met">@Html.DisplayFor(model => model.Remarks)</div>
            </div>
        </div>
        <hr />
