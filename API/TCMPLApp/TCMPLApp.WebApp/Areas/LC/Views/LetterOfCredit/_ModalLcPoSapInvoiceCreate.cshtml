@model TCMPLApp.WebApp.Models.LcPoSapInvoiceCreateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form id="LcPoSapInvoiceCreate"
      asp-controller="LetterOfCredit"
      asp-action="LcPoSapInvoiceCreate"
      asp-area="LC"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onDataTableReloadSuccess"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.LcKeyId)


    <div class="modal-header">
        <h5 class="modal-title">LC PO,Sap,Invoice </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["New LC PO,Sap,Invoice"]</h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Po" class="control-label"></label>
                            <input asp-for="Po" class="form-control" type="number" placeholder="" required />
                            <span asp-validation-for="Po" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Sap" class="control-label"></label>
                            <input asp-for="Sap" class="form-control" type="number" placeholder="" required />
                            <span asp-validation-for="Sap" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Invoice" class="control-label"></label>
                            <input asp-for="Invoice" class="form-control" type="number" placeholder="" required />
                            <span asp-validation-for="Invoice" class="text-danger"></span>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnLcChargesSubmit"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

