@model TCMPLApp.WebApp.Models.CurrencyUpdateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Masters"
      asp-action="CurrencyUpdate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onDataTableReloadSuccess"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.ApplicationId)



    <div class="modal-header">
        <h5 class="modal-title">New Currency</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["New Currency"]</h5>
            </div>
            <div class="card-block">
                 <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="CurrencyCode" class="control-label"></label>
                            <input asp-for="CurrencyCode" class="form-control"  required />
                            <span asp-validation-for="CurrencyCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="CurrencyDesc" class="control-label"></label>
                            <textarea asp-for="CurrencyDesc" class="form-control" rows="3" required></textarea>
                            <span asp-validation-for="CurrencyDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="IsActive" class="control-label"></label>
                            <select asp-for="IsActive" class="form-control chosen-select" data-placeholder="Please select..." required>
                                <option selected></option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
 
