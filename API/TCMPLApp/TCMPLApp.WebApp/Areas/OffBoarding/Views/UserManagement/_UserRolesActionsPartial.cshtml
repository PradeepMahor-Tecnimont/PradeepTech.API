@model IEnumerable<TCMPLApp.Domain.Models.OffBoarding.OffBoardingUserRolesActions>

<div class="  bg-gray-active border rounded ">
    <table id="tbUserActions" class="table table-striped table-bordered table-responsive-lg ">
        <thead class="bg-info text-white">
            <tr>
                <th>Empno</th>
                <th>Name</th>
                <th>Parent</th>
                <th>Action</th>
                <th>Group</th>
                <th>Role</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var m in Model)
            {
                <tr>
                    <td>@m.Empno</td>
                    <td>@m.Name</td>
                    <td>@m.Parent</td>
                    <td>@m.ActionDesc</td>
                    <td>@m.GroupName </td>
                    <td>@m.RoleDesc</td>
                    <td>
                        <button class="btn btn-outline-danger " id="idRemoveEntry" onclick="showDeleteConfirmationPopup(event,this);"
                                data-jqueryselector="showconfirmationmodal"
                                data-url='@Url.Action("RemoveUserAccess", "UserManagement", new { Area = "OffBoarding" })'
                                data-empno="@m.Empno"
                                data-roleid="@m.RoleId"
                                data-actionid="@m.ActionId"
                                data-modaltitle="Please Confirm!"
                                data-confirmationtext="Remove access for @m.Empno  - @m.Name ?"
                                data-confirmationtype="warning"
                                data-confirmbuttontext="Remove access">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="result"></div>
</div>
