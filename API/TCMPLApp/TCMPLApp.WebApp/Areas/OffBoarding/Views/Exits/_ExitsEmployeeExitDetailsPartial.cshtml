@model TCMPLApp.Domain.Models.OffBoarding.OffBoardingExit

@if (Model != null)
{

    <div class="row">
        <div class="col-xl-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.EmployeeName)
                <label id="empno" class="form-control readonly">@(Model.Empno + " - " + Model.EmployeeName)</label>
            </div>
        </div>
        <div class="col-md-6 col-xl-3 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Personid)
                <label id="empno" class="form-control readonly">@(Model.Personid)</label>
            </div>
        </div>
        <div class="col-md-6 col-xl-3 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Grade)
                <label id="grade" class="form-control readonly">@(Model.Grade)</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Parent)
                <label class="form-control readonly">@(Model.Parent + " - " + Model.DeptName)  </label>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.InitiatorRemarks)
                <label class="form-control readonly">@(Model.InitiatorRemarks)  </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 col-xl-3 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.MobilePrimary)
                <label class="form-control readonly">@(Model.MobilePrimary)  </label>
            </div>
        </div>
        <div class="col-md-6 col-xl-3 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.AlternateNumber)
                <label class="form-control readonly">@(Model.AlternateNumber)  </label>
            </div>
        </div>
        <div class="col-xl-6 ">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Address)
                <label class="form-control readonly">@(Model.Address)  </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.EmailId)
                <label class="form-control readonly">@(Model.EmailId)  </label>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.RelievingDate)
                <label class="form-control readonly">@(Model.RelievingDate.ToString("dd-MMM-yyyy"))  </label>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.ResignationDate)
                <label class="form-control readonly">@(Model.ResignationDate.ToString("dd-MMM-yyyy"))  </label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-3 offset-xl-6 col-md-6 col-6">
            <div class="form-group">
                @Html.DisplayNameFor(m => m.Doj)
                <label class="form-control readonly">@(Model.Doj?.ToString("dd-MMM-yyyy") )  </label>
            </div>
        </div>
    </div>

}
