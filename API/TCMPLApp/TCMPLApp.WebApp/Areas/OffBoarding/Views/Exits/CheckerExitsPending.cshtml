@model IEnumerable<TCMPLApp.Domain.Models.OffBoarding.OffBoardingExit>

@{
    ViewData["Title"] = "Off-Boarding - Exits";

    Html.AntiForgeryToken();

}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="OffBoarding">Off-Boarding</a></li>
        <li class="breadcrumb-item active">Exits List</li>
    </ol>
}


<div class="container-fluid bg-gray-active border rounded shadow m-auto col-xl-11 p-1 ">
    <div class="app-h4 app-card-header mb-2">
        <p>Off-Boarding - Pending approval by @ViewBag.ActionAttributes.ActionDesc</p>
    </div>
    <div class="d-flex flex-row">
        <a asp-action="CheckerExitsHistory" asp-area="OffBoarding" asp-controller="Exits" class="btn btn-sm btn-outline-primary ml-auto mr-2">
            <i class="fas fa-walking"></i>&nbsp;GoTo History
        </a>
        @*<button name="ExcelDownload" id="idExcelDownload" title="Excel Download" class=" btn btn-sm btn-success mx-2 ml-auto">
                <i class="far fa-file-excel green-color "></i>
            </button>*@
    </div>
    <hr class="m-1" />
    <div class="  bg-gray-active border rounded ">
        <table id="tbGrid" class="table table-striped table-bordered table-responsive-lg ">
            <thead class="bg-info text-white">
                <tr>
                    <th>Empno</th>
                    <th>Name</th>
                    <th>Parent</th>
                    <th>Dept Name</th>
                    <th>Grade</th>
                    <th>RelievingDate</th>
                    <th>Initiator Remarks</th>
                    <th>First Approval</th>
                    <th>Action</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Empno</td>
                        <td>@m.EmployeeName</td>
                        <td>@m.Parent</td>
                        <td>@m.DeptName</td>
                        <td>@m.Grade </td>
                        <td>@m.RelievingDate.ToString("dd-MMM-yyyy")</td>
                        <td>@m.InitiatorRemarks </td>
                        <td>
                            <a name="ApprovalStatus" id="idApprovalStatus" title="Approval status" class="btn-link" href="#"
                               data-jqueryselector="openmodal"
                               data-modalcontainer="modalcontainer"
                               data-modalpopupwidth="rightw50"
                               data-url='@Url.Action("GetDescendantApprovals", "Exits", new { Area = "OffBoarding" })'
                               data-statichtmlsourcedivid=""
                               data-offboardingempno="@m.Empno"
                               data-modaltitle="Off-Boarding"
                               data-modalheader="First Approvals">

                                @m.FirstApprovalStatus
                            </a>
                        </td>
                        <td>
                            @if (m.FirstApprovalStatus == "Approved")
                            {
                                <a class='btn btn-primary btn-sm text-white ' title="Approve"
                                   asp-action="CheckerExitsApprove" asp-controller="Exits" asp-area="OffBoarding" asp-route-empno="@m.Empno">
                                    <i class="fab fa-buysellads "></i>&nbsp;Approve
                                </a>
                            }
                        </td>
                        <td>
                            @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.OffBoarding.OffBoardingHelper.CommonActionViewOffBoardingStatus))
                            {
                                <a class='btn btn-outline-primary btn-sm ' title="Details"
                                   asp-area="OffBoarding" asp-controller="Exits" asp-action="GetOffBoardingDetails" asp-route-empno="@m.Empno">
                                    <i class="far fa-list-alt"></i>&nbsp;Details

                                </a>
                            }
                            else
                            {
                                <a class='btn btn-outline-primary btn-sm ' title="Details"
                                   asp-area="OffBoarding" asp-controller="Exits" asp-action="CheckerExitsDetail" asp-route-empno="@m.Empno">
                                    <i class="far fa-list-alt"></i>&nbsp;Details

                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div id="result"></div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/datatables-plugins/sorting/datetime-moment.min.js" asp-append-version="true"></script>
    <script>
        $.fn.dataTable.moment('DD-MMM-YYYY');
        $(document).ready(function () {
            $("#tbGrid").DataTable({
                'aaSorting': [[5, 'asc']],//, // start to sort data in first column
                'pagingType': 'full'
            });
        });
    </script>
}