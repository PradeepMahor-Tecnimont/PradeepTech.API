@model TCMPLApp.WebApp.Models.JobResponsibleApproversIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<div class="card">    

    <span id="spanResponsibleStatus" class="f-12 badge badge-danger" style="text-align: left"></span>

    <div class="card-toolbar">
        <div role="toolbar">
            @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.JOB.JOBHelper.ActionJobChangeResponsibleMngr)
                            && Model.ProjectActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.JOB.JOBHelper.ActionJobChangeResponsibleMngr))
            {
                <a class="btn btn-outline-primary btn-sm border-white"
                   data-jqueryselector="openmodal"
                   data-modalcontainer="modalcontainer"
                   data-modalpopupwidth="rightw50"
                   data-url='@Url.Action("ResponsibleApproversEdit", "JobResponsibleApprovers", new { Area = "JOB" })'
                   data-id="@Model.Projno"
                   data-modaltitle="Edit"
                   data-modalheader="Edit">
                    <i class="fas fa-edit"></i>&nbsp;@localizer["Edit"]
                </a>
            }
        </div>
    </div>   
    <div class="card-table">
        <div class="table-responsive">
            <table id="dataTableResponsibleApprovers" class="table table-striped table-bordered table-responsive-lg">
                @if ((bool)@Context.Items["isMobile"] == false)
                {
                    <thead class="bg-info text-white">
                        <tr>                            
                            <th>@localizer[Html.DisplayNameFor(model => model.ResponsibleName)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.Employee)]</th>
                        </tr>
                    </thead>
                }
            </table>
        </div>
    </div>
</div>