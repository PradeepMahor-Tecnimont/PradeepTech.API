@model TCMPLApp.WebApp.Models.PhaseCreateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="JOB"
      asp-action="PhaseCreate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onDataTableReloadSuccess;onSuccessTab('phases')"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Projno)

    <div class="modal-header">
        <h5 class="modal-title">New job phase</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["New job phase"]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Phase" class="control-label"></label>
                            <select asp-for="Phase" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.JobPhases" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Phase" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Tmagrp" class="control-label"></label>
                            <select asp-for="Tmagrp" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.TMAGroups" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Tmagrp" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Blockbooking" class="control-label"></label>
                            <select asp-for="Blockbooking" class="form-control chosen-select" data-placeholder="Please select..." >
                                <option selected></option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Blockot" class="control-label"></label>
                            <select asp-for="Blockot" class="form-control chosen-select" data-placeholder="Please select..." >
                                <option selected></option>
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

