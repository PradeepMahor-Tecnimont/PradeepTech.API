@model TCMPLApp.WebApp.Models.JobCloseInitiateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="JOB"
      asp-action="JobCloseInitiate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript();" 
      data-ajax-success="loadScript();"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Projno)
    @Html.HiddenFor(m => m.ActualClosingDate)

    <div class="modal-header">
        <h5 class="modal-title">Initiate Job closure</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Initiate Job closure - @Model.Projno</h5>
            </div>            
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="ActualClosingDate" class="control-label"></label>
                            <input id="actualClosingDate" class="form-control datepickerMaxDateToday" placeholder="@localizer["dd-MMM-yyyy"]" value="@Model.ActualClosingDate?.ToString("dd-MMM-yyyy")" required />
                            <span asp-validation-for="ActualClosingDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="Notes" class="control-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="8" maxlength="455" required></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"                
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Initiate Job closure"]">
            @localizer["Initiate Job closure"]
        </button>        
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>


