@model TCMPLApp.WebApp.Models.OSCMhrsSummaryViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer


<div class="input-group pt-1 pl-1 pr-1 ">
    <input type="text" class="form-control form-control-sm border" id="OSCMhrsSummarySearch" name="GenericSearch"
           onkeypress="genericSearchKeypress('OSCMhrsSummarySearch')" placeholder="Search...">
    <div class="input-group-append">
        <button class="btn btn-sm btn-outline-info" type="button" id="buttonOSCMhrsSummarySearch" onclick="genericSearchOnClick('OSCMhrsSummarySearch')">
            <i class="fa fa-search"></i>
        </button>
    </div>
</div>
<div class="card-table">

    <div class="table-responsive">
        <table id="tbOSCMhrsSummary" class="table table-striped table-bordered table-responsive-lg">
            @if ((bool)@Context.Items["isMobile"] == false)
            {
                <thead class="bg-info text-white">
                    <tr>
                        <th>@localizer[Html.DisplayNameFor(model => model.Empno)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.EmpName)]</th>
                        @*<th>@localizer[Html.DisplayNameFor(model => model.Parent)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.ParentName)]</th>*@
                        <th>@localizer[Html.DisplayNameFor(model => model.Assign)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.AssignName)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.Hours)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.IsLockStatus)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.IsHodApproveStatus)]</th>
                        <th>@localizer[Html.DisplayNameFor(model => model.IsPostStatus)]</th>
                    </tr>
                </thead>
            }
        </table>
    </div>
</div>