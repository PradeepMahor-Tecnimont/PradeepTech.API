@model TCMPLApp.WebApp.Models.TimesheetStatusPartialIndexViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

@{
    var paramId = @Model.FilterDataModel.Yyyymm + @Html.Raw("!-!") + @ViewBag.Costcode;
}

<div class="modal-header">
    <h5 class="modal-title">@localizer["Timesheet approved for costcode "] @ViewBag.Costcode</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-header">
            <h5>@localizer["Timesheet approved for costcode "] @ViewBag.Costcode</h5>
        </div>
        <div class="card-block">
            <div id="idApprovedIndex" class="table-responsive p-r-10">
                <div id="approvedButtons"  class="text-right hidden">
                    <div style="float:left" class="p-l-10">
                        <label class="control-label f-w-700">Actual working hours: </label> <span class="text-dark-green f-w-700">@ViewBag.ActualHours</span>
                    </div>
                    <a style="float:right" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
                        id="xlsApprovedPartialStatus"
                        href="#"
                        data-jqueryselector="binarydownload"
                        data-url="@(Url.Action("TimesheetDepartmentDownload", "TSStatus", new { Area = "Timesheet" }))"
                        data-id="@Model.FilterDataModel.Yyyymm@Html.Raw("!-!")@ViewBag.Costcode@Html.Raw("!-!Approved!-!")">
                        <i class="fas fa-file-excel green-color"></i>&nbsp;Export
                    </a>
                    @if (ViewBag.IsTSFreeze == 1)
                    {
                        @if (ViewBag.ProcMnthStatus == "IsVisible")
                        {
                            <a style="float:right" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
                               id="postAllStatus"
                               href="#"
                               onclick="showDeleteConfirmationPopup(event,this);"
                               data-jqueryselector="showconfirmationmodal"
                               data-url="@(Url.Action("TimesheetBulkAction", "TSStatus", new { Area = "Timesheet" }))"
                               data-id="@Model.FilterDataModel.Yyyymm@Html.Raw("!-!")@ViewBag.Costcode@Html.Raw("!-!Posted!-!PostAll")"
                               data-callback="PostSaveReLoad"
                               data-redirecturl="@Url.Action("DepartmentIndex", "TSStatus", new { Area = "Timesheet", costcode = ViewBag.Costcode })"
                               data-modaltitle="Please Confirm!"
                               data-confirmationtext="@ViewBag.AlertMsg"
                               data-confirmationtype="warning"
                               title="Post all timesheet"
                               data-confirmbuttontext="Post all timesheet">
                                <i class="fas fa-check"></i>&nbsp;Post all
                            </a>
                            <a style="float:right" class="btn btn-outline-danger btn-sm border border-white mx-2 ml-auto"
                               id="unApproveAllStatus"
                               href="#"
                               onclick="showDeleteConfirmationPopup(event,this);"
                               data-jqueryselector="showconfirmationmodal"
                               data-url="@(Url.Action("TimesheetBulkAction", "TSStatus", new { Area = "Timesheet" }))"
                               data-id="@Model.FilterDataModel.Yyyymm@Html.Raw("!-!")@ViewBag.Costcode@Html.Raw("!-!Approved!-!UnapproveAll")"
                               data-PostSaveReLoadDataTable="OK"
                               data-redirecturl="@Url.Action("DepartmentIndex", "TSStatus", new { Area = "Timesheet", costcode = ViewBag.Costcode })"
                               data-modaltitle="Please Confirm!"
                               data-confirmationtext="Do you want to UNLOCK ALL timesheet for @ViewBag.Costcode"
                               data-confirmationtype="warning"
                               title="Unapprove all timesheet"
                               data-confirmbuttontext="Unapprove all timesheet">
                                <i class="fas fa-user-times"></i>&nbsp;Unapprove all
                            </a>
                        }
                    }
                    else
                    {
                        <span class="pr-1 f-12 badge badge-danger" style="text-align: left">
                            Timesheet under processing, can't UNAPPROVE / POST
                        </span>
                    }
                </div>
                <div class="m-3"></div>
                <div class="input-group pt-1 pl-1 pr-1 ">
                    <input type="text" class="form-control form-control-sm border" id="TimesheetApprovedPartialSearch" name="TimesheetApprovedPartialSearch"
                           onkeypress="genericSearchKeypress('TimesheetApprovedPartialSearch')" placeholder="Search...">
                    <div class="input-group-append">
                        <button class="btn btn-sm btn-outline-info" type="button" id="buttonTimesheetApprovedPartialSearch" onclick="genericSearchOnClick('TimesheetApprovedPartialSearch')">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
                <div class="m-2"></div>
                <table id="tbApprovedPartialGrid" class="table table-striped table-bordered table-responsive-lg">
                    <thead class="bg-info text-white">
                        <tr>
                            <th>@localizer[Html.DisplayNameFor(model => model.Empno)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.Empname)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.Emptype)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.Hours)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.OtHours)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.CcHours)]</th>
                            <th>@localizer[Html.DisplayNameFor(model => model.CcOtHours)]</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
</div>
<div id="results" style="display:none">@TempData["Message"]</div>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

<script>
    $(document).ready(function () {
        setTimeout(function () {
            var tabApprove = $('#tbApprovedPartialGrid').DataTable();

            if(tabApprove.data().length>0)
                $('#approvedButtons').removeClass("hidden");
                
        }, 1000); 
    });
</script>
