@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<div style="display:none">
    <input id="Mailsubject" readonly type="hidden" value="" />
    <input id="MailBody" readonly type="hidden" value="" />
</div>

<div class="modal-header">
    <h5 class="modal-title">@localizer["Formulate reminder for timesheet not "] "@ViewBag.StatusName"</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-block">
            <div class="form-group">
                <div class="row">
                    <label class="control-label">Email addreess</label>
                    <textarea id="EmailRecepientList" class="form-control" placeholder="@localizer["Recepient list"]" rows="15"></textarea>
                </div>
            </div>
            <div class="m-2"></div>
            <div class="form-group">
                <div class="row">
                    <div class="form-group col-12 text-dark-green f-w-700">
                        <p>Please follow the instructions to send email...</p>
                    </div>                               
                    <div class="form-group col-12">
                        <p>1. Click button "Generate email message" to create new email message</p>
                    </div>                                  
                    <div class="form-group col-12">
                        <p>2. Copy email addresses from above and paste it either as TO or BCC recepients.</p>
                    </div>                                   
                    <div class="form-group col-12">
                        <p>3. Send email.</p>
                    </div>
                </div> 
            </div>
        </div>        
    </div>
</div>
<div class="modal-footer">
    <a href="#!"
       onclick="generateReminderEmail()"
       class="btn btn-primary"
       title="Generate email message">
        Generate email message
    </a>
    <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
</div>