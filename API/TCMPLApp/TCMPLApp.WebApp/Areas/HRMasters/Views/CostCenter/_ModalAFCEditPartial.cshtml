@model TCMPLApp.WebApp.Areas.HRMasters.Models.CostCenterAFCCreateViewModel

@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Cost center edit";
}

@{
    UserIdentity currentUserIdentity = CurrentUserIdentity;
}

<form asp-controller="CostCenter"
      asp-action="AFCTabEdit"
      id="idAFCTabEditCostCenter"
      data-ajax="true"
      data-ajax-update="#modal-content"
      data-ajax-method="POST"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onSuccessTab('afc');PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.CostCodeId)
    @Html.HiddenFor(m => m.CostCode)

    <div class="modal-header">
        <h5 class="modal-title">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Cost center - @Model.CostCode</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-12">
                            <label asp-for="TcmCostCodeId" class="control-label"></label>
                            <select asp-for="TcmCostCodeId" class="form-control Select2" asp-items="ViewBag.tcmCostCenterId">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="TcmActPhId" class="control-label"></label>
                            <select asp-for="TcmActPhId" class="form-control Select2" asp-items="ViewBag.tcmActPhId">
                                <option selected></option>
                            </select>
                        </div>
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="TcmPasPhId" class="control-label"></label>
                            <select asp-for="TcmPasPhId" class="form-control Select2" asp-items="ViewBag.tcmPasPhId">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-12">
                            <label asp-for="PO" class="control-label"></label>
                            <input asp-for="PO" class="form-control" placeholder="Purhase order" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
