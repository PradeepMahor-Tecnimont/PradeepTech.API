@model TCMPLApp.WebApp.Areas.HRMasters.Models.CostCenterMainCreateViewModel

@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Cost center edit";
}

@{
    UserIdentity currentUserIdentity = CurrentUserIdentity;
}

<form asp-controller="CostCenter"
      asp-action="Edit"
      id="idEditCostCenter"
      data-ajax="true"
      data-ajax-update="#modal-content"
      data-ajax-method="POST"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onDataTableReloadSuccess(null);PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.CostCodeId)
    @Html.HiddenFor(m => m.CostCode)

    <div class="modal-header">
        <h5 class="modal-title">Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Cost center - @Model.CostCode</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-12">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Name" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">                        
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="EnggNonengg" class="control-label"></label>
                            <select asp-for="EnggNonengg" class="form-control Select2" asp-items="ViewBag.EnggNonenggList">
                                <option value="" hidden disabled selected>Please select...</option>
                            </select>
                        </div>                                                
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="Abbr" class="control-label"></label>
                            <input asp-for="Abbr" class="form-control" required />
                            <span asp-validation-for="Abbr" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="SAPCC" class="control-label"></label>
                            <input asp-for="SAPCC" class="form-control" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="HoD" class="control-label"></label>
                            <select asp-for="HoD" class="form-control Select2" placeholder="Please select" asp-items="ViewBag.HoDId" required>
                            </select>
                            <span asp-validation-for="HoD" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="ParentCostCodeId" class="control-label"></label>
                            <select asp-for="ParentCostCodeId" class="form-control Select2" asp-items="ViewBag.ParentCostCenterId">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="CostGroupId" class="control-label"></label>
                            <select asp-for="CostGroupId" class="form-control Select2" asp-items="ViewBag.CostGroupId" required>
                            </select>
                            <span asp-validation-for="CostGroupId" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="CostTypeId" class="control-label"></label>
                            <select asp-for="CostTypeId" class="form-control Select2" asp-items="ViewBag.CostTypeId" required>
                            </select>
                            <span asp-validation-for="CostTypeId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="Secretary" class="control-label"></label>
                            <select asp-for="Secretary" class="form-control Select2" asp-items="ViewBag.SecretaryId">
                                <option selected></option>
                            </select>
                        </div>
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="GroupId" class="control-label"></label>
                            <select asp-for="GroupId" class="form-control Select2" asp-items="ViewBag.GroupId" required>
                            </select>
                            <span asp-validation-for="GroupId" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="SDate" class="control-label"></label>
                            <input asp-for="SDate" class="form-control" type="date" placeholder="dd-mm-yyyy" />
                        </div>
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="EDate" class="control-label"></label>
                            <input asp-for="EDate" class="form-control" type="date" placeholder="dd-mm-yyyy" />
                        </div>
                        <div class="col-md-12 col-xl-4">
                            <label asp-for="NoOfEmps" class="control-label"></label>
                            <input asp-for="NoOfEmps" class="form-control" required />
                            <span asp-validation-for="NoOfEmps" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
