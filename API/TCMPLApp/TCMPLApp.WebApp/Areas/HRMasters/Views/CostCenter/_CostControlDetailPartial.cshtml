@model TCMPLApp.Domain.Models.HRMasters.View.CostCenterMasterCostControl

@{
    ViewData["Title"] = "Cost center detail";
}

<div class="card shadow col-md-12 col-xl-12">
    <div class="card-block">
        @if (CurrentUserIdentity.ProfileActions.Any(p => p.RoleId == TCMPLApp.Domain.Models.HRMasters.HRMastersHelper.RoleCostControlAdmin))
        {
            <div class="row">
                <a title="Edit cost center cost control" class="btn btn-outline-primary btn-sm border-none" href="#"
                   data-jqueryselector="openmodal"
                   data-modalcontainer="modalcontainer"
                   data-modalpopupwidth="rightw50"
                   data-url='@Url.Action("CostControlTabEdit", "CostCenter", new { Area = "HRMasters" })'
                   data-statichtmlsourcedivid=""
                   data-modaltitle="Edit cost center"
                   data-modalheader="Edit cost center"
                   data-id="@Model.CostCodeId">
                    <i class="fas fa-edit"></i>
                    Edit
                </a>
            </div>
        }
    </div>
    @if (CurrentUserIdentity.ProfileActions.Any(p => p.RoleId == TCMPLApp.Domain.Models.HRMasters.HRMastersHelper.RoleCostControlAdmin))
    {
        <hr />
    }

    <div class="row">
        <div class="form-group col-md-6">
            <div class="dt-met">@Html.DisplayNameFor(model => model.Tm01Grp)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.Tm01Grp) - @Html.DisplayFor(model => model.Tm01GrpName)</div>
        </div>
        <div class="form-group col-md-6">
            <div class="dt-met">@Html.DisplayNameFor(model => model.TmaGrp)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.TmaGrp) - @Html.DisplayFor(model => model.TmaGrpName)</div>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-4">
            <div class="dt-met">@Html.DisplayNameFor(model => model.Activity)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.Activity)</div>
        </div>
        <div class="form-group col-md-4">
            <div class="dt-met">@Html.DisplayNameFor(model => model.GroupChart)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.GroupChart)</div>
        </div>
        <div class="form-group col-md-4">
            <div class="dt-met">@Html.DisplayNameFor(model => model.ItalianName)</div>
            @if (String.IsNullOrEmpty(Model.ItalianName))
            {
                <div class="dd-met">-</div>
            }
            else
            {
                <div class="dd-met">@Html.DisplayFor(model => model.ItalianName)</div>
            }
        </div>
    </div>
    <div class="row">
        <div class="form-group col-md-6">
            <div class="dt-met">@Html.DisplayNameFor(model => model.CompReport)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.CompReport) - @Html.DisplayFor(model => model.CompReportName)</div>
        </div>
        <div class="form-group col-md-6">
            <div class="dt-met">@Html.DisplayNameFor(model => model.Phase)</div>
            <div class="dd-met">@Html.DisplayFor(model => model.Phase) - @Html.DisplayFor(model => model.PhaseName)</div>
        </div>
    </div>
</div>

