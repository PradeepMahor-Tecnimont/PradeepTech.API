@model TCMPLApp.WebApp.Models.FilterDataModel

<form class="form-filter-datetime"
      id="formHolidaysFilterSet"
      asp-area="HRMasters"
      asp-controller="HRMaster"
      asp-action="HolidaysFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="Reload(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />


    <div class="modal-header">
        <h5 class="modal-title">Holidays Filter</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">

                <div class="row">
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group ">
                            <label asp-for="RegionCode" class="control-label"></label>
                            <select asp-for="RegionCode" class="form-control chosen-select" multiple="multiple" data-placeholder=" Please select..." asp-items="ViewBag.RegionList">
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group ">
                            <label asp-for="Year" class="control-label"></label>
                            <input type="text" asp-for="Year" class="form-control" />

                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group ">
                            <div class="switch d-inline m-r-10">
                                <input type="checkbox" asp-for="IsYes" />
                                <label for="IsYes" class="cr" style="top: 0px;"></label>
                            </div>
                            <label class="form-check-label" style="vertical-align:top; padding-top:2px;" for="IsYes"> Show SAT/SUN</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
