@model TCMPLApp.WebApp.Models.HolidaysCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="HRMaster"
      asp-action="HolidaysCreate"
      id="formHolidaysMaster"
      data-ajax="true"
      data-ajax-update="#modal-content"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.Holiday" />
    <input type="hidden" asp-for="@Model.Yyyymm" />
    <input type="hidden" asp-for="@Model.Weekday" />
    
    <div class="modal-header">
        <h5 class="modal-title">@localizer["Add Holidays"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Add Region</h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Holiday" class="control-label"></label>
                            <input id="holiday" class="form-control datepicker" placeholder="@localizer["dd-MM-yyyy"]" value="@Model.Holiday?.ToString("dd/MMM/yyyy")" required />
                            <span asp-validation-for="Holiday" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group ">
                            <label asp-for="RegionCode" class="control-label"></label>
                            <select asp-for="RegionCode" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.RegionList" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="RegionCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Enter Description" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>