@model TCMPLApp.WebApp.Areas.HRMasters.Models.EmployeeActivateViewModel

@Html.AntiForgeryToken()

<form asp-controller="Employee"
      asp-action="ActivateEmployee"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onSuccessRedirect('/HRMasters/Employee')"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Empno)

    <div class="modal-header">
        <h5 class="modal-title">Activate Employee</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@ViewBag.Name [ @Model.Empno ]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">                        
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.Dol)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.Dol)</div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.ReasonDesc)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.ReasonDesc)</div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">@Html.DisplayNameFor(model => model.Remarks)</div>
                                <div class="dd-met">@Html.DisplayFor(model => model.Remarks)</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>"Waiting..."'
                data-text="Confirm">
            Activate
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




