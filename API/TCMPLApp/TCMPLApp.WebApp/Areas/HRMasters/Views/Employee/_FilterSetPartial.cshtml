                    <select asp-for="StatusList" class="form-control chosen-select-required" data-placeholder="@localizer["Status name"]" asp-items="ViewBag.StatusList" multiple="multiple">
                    </select>
                </div>
                <h6 class="mb-2 f-w-300">@localizer["Form types"]</h6>
