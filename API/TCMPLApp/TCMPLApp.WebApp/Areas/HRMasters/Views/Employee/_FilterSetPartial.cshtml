@model TCMPLApp.WebApp.Models.FilterDataModel;

<form class="form-filter-datetime"
      id="formFilterSet"
      asp-area="HRMasters"
      asp-controller="Employee"
      asp-action="FilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="PostFilterReLoadDataTable(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />

    <div class="modal-header">
        <h5 class="modal-title">Filter</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
                @if (Model.IsFiltered == true)
                {
                    <a class="btn btn-outline-danger btn-sm border-white"
                       data-action="ResetFilterSession"
                       href="/HRMasters/Employee/ResetFilterSession?controllerName=Employee"
                       onclick="resetFilter(event, this);">
                        <i class="fas fa-filter"></i>
                        Reset
                    </a>
                }
            </div>
            <div class="card-block">
                <h6 class="mb-2 f-w-300">Status</h6>
                <div class="form-group">
                    <select asp-for="Status" class="form-control Select2" asp-items="ViewBag.StatusList">
                        <option value="" hidden disabled selected>Please select...</option>
                    </select>                    
                </div>
                @*<div class="form-group">
                    <input asp-for="EndDateTime" data-isodate="@Model.EndDateTimeString" class="form-control datepicker" placeholder="@localizer["End date"]" />
                </div>
