@model TCMPLApp.WebApp.Models.EmpOfficeViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="EmpOfficeLocation"
      asp-action="ImportEmpOffice"
      id="formImportEmpOffice"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.StartDate" />
    <div class="modal-header">
        <h5 class="modal-title">@localizer["Employee Office Location"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Employee Office Location</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <label asp-for="EmpOfficeLocation" class="control-label"></label>
                                <select asp-for="EmpOfficeLocation" class="form-control chosen-select" data-placeholder=" Please select..." asp-items="ViewBag.OfficeList" required>
                                    <option selected></option>
                                </select>
                                <span asp-validation-for="EmpOfficeLocation" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <label asp-for="StartDate" class="control-label"></label>
                                <input id="startDate" class="form-control datepicker" placeholder="@localizer["dd-MM-yyyy"]" value="@Model.StartDate?.ToString("dd/MMM/yyyy")" required />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Employee" class="control-label"></label>
                            <textarea asp-for="Employee" class="form-control" rows="3" maxlength="4000" onkeypress="RegularExpressionValidationCheck(event)" onpaste="validatePaste(this, event)" required></textarea>
                            <span asp-validation-for="Employee" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

