@model TCMPLApp.WebApp.Models.FilterDataModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form class=""
      id="formHRMISExcelDownload"
      asp-area="HRMasters"
      asp-controller="HRMIS"
      asp-action="HRMISExcelDownload"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <div style="display:none">
        <input type="hidden" asp-for="@Model.IsFiltered" />
        <input type="hidden" name="typeId" id="typeId" value="@ViewBag.XLDownloadType" />
        @Html.TextBoxFor(model => model.StartDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" ,@required = "required"})
        @Html.TextBoxFor(model => model.EndDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" ,@required = "required"})
    </div>

    <div class="modal-header">
        <h5 class="modal-title">Report-Filter</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Select (From Date) - (To Date)</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input id="startDateXl" class="form-control " placeholder="Start date" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input id="endDateXl" class="form-control " placeholder="End date" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" id="btnExportExcel"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <div id="exportExcel_Loader" class="spinner-border text-info text-center hidden "
             style="width: 2.5rem; height: 2.5rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
