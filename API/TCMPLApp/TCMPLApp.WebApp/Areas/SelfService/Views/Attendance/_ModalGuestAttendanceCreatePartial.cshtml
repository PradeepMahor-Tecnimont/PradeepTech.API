@model TCMPLApp.WebApp.Models.GuestAttendanceCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Attendance"
      asp-action="GuestAttendanceCreate"
      id="formNewGuestAttendanceCreate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.StartDate" />
    <input type="hidden" asp-for="@Model.FromHRS" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Guest attendance"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Guest attendance "]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="GuestName" class="control-label"></label>
                            <textarea asp-for="GuestName" class="form-control" rows="3" placeholder="Guest names" required></textarea>
                            <span asp-validation-for="GuestName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="GuestCompany" class="control-label"></label>
                            <input asp-for="GuestCompany" class="form-control" placeholder="Company name" required />
                            <span asp-validation-for="GuestCompany" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input id="startDate" class="form-control datepicker" placeholder="@localizer["Start date"]" value="" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-12 col-xl-6">
                            <label asp-for="FromHRS" class="control-label"></label>
                            <input id="fromHRS" class="form-control timepicker" placeholder="@localizer["HH:mm"]" value="" required />
                            <span asp-validation-for="FromHRS" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="MeetingPlace" class="control-label"></label>
                            <select asp-for="MeetingPlace" class="form-control chosen-select" data-placeholder="" Please select..."" asp-items="ViewBag.MeetingPlace" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="MeetingPlace" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="Remarks" class="control-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Remarks" required></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>