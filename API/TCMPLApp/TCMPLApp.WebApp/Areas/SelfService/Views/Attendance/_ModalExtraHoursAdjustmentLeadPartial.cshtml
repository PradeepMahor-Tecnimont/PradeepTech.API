@model TCMPLApp.WebApp.Models.ExtraHoursClaimAdjustmentLeadViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Attendance"
      asp-action="LeadExtraHoursAdjustment"
      id="formExtraHoursAdjustmentLead"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript();loadScritp()"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <div class="modal-header">
        <h5 class="modal-title">@localizer["OT Claim Adjustment"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@Html.DisplayFor(model => model.Employee)</h5>
            </div>
            <div class="card-block">
                <table class="table table-bordered table-responsive-lg  ">
                    <thead class="bg-info text-white border ">
                        <tr>
                            <td style="min-width: 7rem; "></td>
                            <td>@localizer["Weekly OT"]</td>
                            <td>@localizer["Holiday OT"]</td>
                            <td>@localizer["Comp Off"]</td>
                        </tr>
                    </thead>
                    <tbody class=" border">
                        <tr>
                            <td>
                                @localizer["Claimed"]
                                @Html.HiddenFor(m => m.ClaimNo)
                                @Html.HiddenFor(m => m.ClaimedOt)
                                @Html.HiddenFor(m => m.ClaimedHhot)
                                @Html.HiddenFor(m => m.ClaimedCo)
                            </td>
                            <td>@TCMPLApp.WebApp.Classes.StringHelper.MinutesToHrs(Decimal.ToInt32(Model.ClaimedOt))</td>
                            <td>@TCMPLApp.WebApp.Classes.StringHelper.MinutesToHrs(Decimal.ToInt32(Model.ClaimedHhot))</td>
                            <td>@TCMPLApp.WebApp.Classes.StringHelper.MinutesToHrs(Decimal.ToInt32(Model.ClaimedCo))</td>

                        </tr>
                        <tr>
                            <td>@localizer["Lead approved"]</td>

                            <td>
                                @if (Model.ClaimedOt > 0)
                                {
                                    <div class="form-group ">
                                        <input asp-for="LeadApprovedOt" class="form-control form-control-sm" type="number" />
                                    </div>
                                }
                                else
                                {
                                    @Html.HiddenFor(m => m.LeadApprovedOt)
                                }
                                </td>
                            <td>
                                @if (Model.ClaimedHhot > 0)
                                {
                                    <div class="form-group ">
                                        <input asp-for="LeadApprovedHhot" class="form-control form-control-sm" type="number" />
                                    </div>
                                }
                                else
                                {
                                    @Html.HiddenFor(m => m.LeadApprovedHhot)
                                }
                                </td>
                            <td>
                                @if (Model.ClaimedCo > 0)
                                {
                                    <div class="form-group ">
                                        <input asp-for="LeadApprovedCo" class="form-control form-control-sm" type="number" />
                                    </div>
                                }
                                else
                                {
                                @Html.HiddenFor(m => m.LeadApprovedCo)
                                }
                                </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-danger" id="approvedOTMsg"></div>
            <div class="text-danger" id="approvedHHOTMsg"></div>
            <div class="text-danger" id="approvedCOMsg"></div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnSaveAdjustment"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>