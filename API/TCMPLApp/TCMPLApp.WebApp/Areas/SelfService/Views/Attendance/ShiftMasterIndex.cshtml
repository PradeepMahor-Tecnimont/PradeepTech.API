@model TCMPLApp.WebApp.Models.ShiftMasterViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Shift Master";
}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="SelfService">SelfService</a></li>
        <li class="breadcrumb-item"><a asp-action="ActionsHRIndex" asp-controller="Home" asp-area="SelfService">HR actions</a></li>
        <li class="breadcrumb-item active">Shift Master</li>
    </ol>
}
@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}

<div class="row p-2 m-2">
    <div class="container-fluid bg-white border rounded shadow m-auto col-xl-12 p-2 ">
        <div class="app-h4 app-card-header mb-2">
            <p>Shift Master</p>
        </div>
        <div class="d-flex flex-row">
            <a title="New Shift" class="btn btn-outline-primary btn-sm border border-white" href="#"
               data-jqueryselector="openmodal"
               data-modalcontainer="modalcontainer"
               data-modalpopupwidth="rightw35"
               data-url='@Url.Action("ShiftCreate", "Attendance", new { Area = "SelfService" })'
               data-statichtmlsourcedivid=""
               data-modaltitle="New Shift"
               data-modalheader="New Shift">
                <i class="fas fa-plus"></i> Create
            </a>
            @* <a class="btn btn-outline-primary btn-sm filteredmarker-border border-white"
            data-jqueryselector="openmodal"
            data-modalcontainer="modalcontainer"
            data-modalpopupwidth="rightw35"
            data-url='@Url.Action("ShiftFilterGet", "Attendance", new { Area = "SelfService" })'
            data-modaltitle="Filters - Shift"
            data-modalheader="Filters - Shift">
            <i class="fas fa-filter"></i>&nbsp;Filters
            </a>
            <a class="btn btn-outline-danger btn-sm border-white filteredmarker-visibility m-l-5"
            data-actionid="ShiftMasterIndex"
            data-url='@Url.Action("ResetFilter", "Attendance", new { Area = "SelfService" })'
            href="#"
            onclick="resetFilter(event, this);"
            style="display: none;">
            <i class="fas fa-filter"></i> Reset
            </a> *@
            <a style="float:right" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
               href="#"
               data-jqueryselector="binarydownload"
               data-url="@(Url.Action("ShiftExcelDownload", "Attendance", new { Area = "SelfService" }))">
                <i class="fas fa-file-excel green-color"></i>&nbsp;Export
            </a>

        </div>
        <div class="m-1"></div>
        <div class="bg-gray-active rounded ">
            <div class="input-group pt-1 pl-1 pr-1 ">
                <input type="text" class="form-control form-control-sm border" id="GenericSearch" name="GenericSearch" placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearch"><i class="fa fa-search"></i></button>
                </div>
            </div>

            <table id="tbShift" class="table table-striped table-bordered table-responsive-lg ">
                <thead class="bg-info text-white">
                    <tr>
                        <th>&nbsp;</th>
                        <th>@Html.DisplayNameFor(model => model.Shiftcode)</th>
                        <th>@Html.DisplayNameFor(model => model.TimeinHh)</th>
                        <th>@Html.DisplayNameFor(model => model.TimeoutHh)</th>
                        <th>@Html.DisplayNameFor(model => model.Shift4allowance)</th>
                        <th>@Html.DisplayNameFor(model => model.LunchMn)</th>
                        <th>@Html.DisplayNameFor(model => model.OtApplicable)</th>
                        <th>&nbsp;</th>
                        @* <th>&nbsp;</th> *@
                    </tr>
                </thead>
            </table>
            <div id="result"></div>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>

        $(document).ready(function () {
            loadShiftMasterDataTable();
        });

        function localScript() {
            initSelect2();
            initDatePicker();
        };

        let vVUloadShiftMasterList = "@Url.Action("GetListsShiftMaster", "Attendance")";

        function loadShiftMasterDataTable() {
            genericLoadDataTable({
                pDataTableId: "#tbShift",
                pColumns: datatableColumns,
                pUrl: vVUloadShiftMasterList,
                pUrlParams: {
                    genericSearch: $('#GenericSearch').val() ? $('#GenericSearch').val() : null
                },
                pRequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()

            });
        };

        @if ((bool)@Context.Items["isMobile"] == false)
        {
            <text>

                let datatableColumns = [
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<button class="btn btn-outline-info btn-sm border-none" ' +
                                ' data-jqueryselector="openmodal" ' +
                                ' data-modalcontainer="modalcontainer" ' +
                                ' data-url="@Url.Action("ShiftDetailsTab1", "Attendance", new { Area = "SelfService" })"' +
                                ' data-modalpopupwidth="rightw50" ' +
                                ' data-id="' + data.shiftcode + '"' +
                                ' data-modaltitle="Shift Details" ' +
                                ' data-modalheader="Shift Details" ' +
                                ' > ' +
                                ' <i class="far fa-eye" aria-hidden="true"></i> ' +
                                ' </button>'
                        },
                        'className': "td-icon",
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return data.shiftcode + " - " + data.shiftdesc
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return data.timeinHh + " : " + data.timeinMn
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return data.timeoutHh + " : " + data.timeoutMn
                        }
                    },
                    { data: "shift4allowanceText" },
                    { data: "lunchMn" },
                    { data: "otApplicableText" },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<button title="Edit" class="btn btn-outline-primary btn-sm border-none" ' +
                                ' data-jqueryselector="openmodal" ' +
                                ' data-modalcontainer="modalcontainer" ' +
                                ' data-url="@Url.Action("ShiftEditTab1", "Attendance", new { Area = "SelfService" })" ' +
                                ' data-modalpopupwidth="rightw50" ' +
                                ' data-id="' + row.shiftcode + '"' +
                                ' data-modaltitle="Edit Shift" ' +
                                ' data-modalheader="Edit Shift"> ' +
                                ' <i class="fas fa-edit" aria-hidden="true"></i> ' +
                                ' </button>'

                        },
                        className: "td-icon",
                    },

                ];

            </text>
        };
        
        function initDatePicker() {
            $('.datetimepicker').bootstrapMaterialDatePicker({
                date: false,
                format: 'HH:mm',
                shortTime: true,
                pickSeconds: false,
            });

            $("#timeIn").on("change", function (event, date) {
                $("#TimeIn").val(date.format('HH:mm'));

                var TimeIn = $("#TimeIn").val();
                var TimeOut = $("#TimeOut").val();

                if (TimeOut != null || TimeOut != '') {
                    var beginningTime = moment(TimeIn, 'HH:mm');
                    var endTime = moment(TimeOut, 'HH:mm');

                    if (endTime.isBefore(beginningTime)) {
                        $("#TimeIn").val("");
                        notify('error', 'Invalid Time', 'danger');
                        return;
                    }
                }

            });

            $("#timeOut").on("change", function (event, date) {
                $("#TimeOut").val(date.format('HH:mm'));

                var TimeIn = $("#TimeIn").val();
                var TimeOut = $("#TimeOut").val();

                var beginningTime = moment(TimeIn, 'HH:mm');
                var endTime = moment(TimeOut, 'HH:mm');

                if (endTime.isBefore(beginningTime)) {

                    $("#TimeOut").val("");
                    notify('error', 'Invalid Time', 'danger');
                    return;
                }
            });

            $("#chFdStartMi").on("change", function (event, date) {
                $("#ChFdStartMi").val(date.format('HH:mm'));
            });

            $("#chFdEndMi").on("change", function (event, date) {
                $("#ChFdEndMi").val(date.format('HH:mm'));

            });

            $("#chFhStartMi").on("change", function (event, date) {
                $("#ChFhStartMi").val(date.format('HH:mm'));
            });

            $("#chFhEndMi").on("change", function (event, date) {
                $("#ChFhEndMi").val(date.format('HH:mm'));
            });

            $("#chShStartMi").on("change", function (event, date) {
                $("#ChShStartMi").val(date.format('HH:mm'));
            });

            $("#chShEndMi").on("change", function (event, date) {
                $("#ChShEndMi").val(date.format('HH:mm'));
            });

            $("#workHrsStartMi").on("change", function (event, date) {
                $("#WorkHrsStartMi").val(date.format('HH:mm'));
            });

            $("#workHrsEndMi").on("change", function (event, date) {
                $("#WorkHrsEndMi").val(date.format('HH:mm'));
            });

            $("#firstPunchAfterMi").on("change", function (event, date) {
                $("#FirstPunchAfterMi").val(date.format('HH:mm'));
            });

            $("#lastPunchBeforeMi").on("change", function (event, date) {
                $("#LastPunchBeforeMi").val(date.format('HH:mm'));
            });

            $("#lunchStartMi").on("change", function (event, date) {
                $("#LunchStartMi").val(date.format('HH:mm'));
            });

            $("#lunchEndMi").on("change", function (event, date) {
                $("#LunchEndMi").val(date.format('HH:mm'));
            });
            $("#hdFhStartMi").on("change", function (event, date) {
                $("#HdFhStartMi").val(date.format('HH:mm'));
            });
            $("#hdFhEndMi").on("change", function (event, date) {
                $("#HdFhEndMi").val(date.format('HH:mm'));
            });
            $("#hdShStartMi").on("change", function (event, date) {
                $("#HdShStartMi").val(date.format('HH:mm'));
            });
            $("#hdShEndMi").on("change", function (event, date) {
                $("#HdShEndMi").val(date.format('HH:mm'));
            });
        }

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadShiftMasterDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {

            if ($("#GenericSearch").length) {
                loadShiftMasterDataTable();
            }
        });


        function PostSave(data) {

            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadShiftMasterDataTable();
                notify('success', data.response, 'Success');
            }
        };
        function PostDeleteReLoadDataTables(data) {
            if (data.success) {
                loadShiftMasterDataTable();
                hideLoader();
                notify('success', data.message, 'Success');
            }
        }
        function isNumber(evt) {
            evt = (evt) ? evt : window.event;
            let charCode = (evt.which) ? evt.which : evt.keyCode;
            return !(charCode > 31 && (charCode < 48 || charCode > 57) && charCode !== 46);
        }
    </script>
}