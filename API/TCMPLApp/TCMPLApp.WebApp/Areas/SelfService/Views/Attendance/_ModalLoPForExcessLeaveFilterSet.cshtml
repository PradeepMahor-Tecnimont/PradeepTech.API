@model TCMPLApp.WebApp.Models.FilterDataModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

<form id="formLoPForExcessLeaveFilterSet"
      asp-area="SelfService"
      asp-controller="Attendance"
      asp-action="LoPForExcessLeaveFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="PostFilterReLoadDataTable(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />
    <input type="hidden" asp-for="@Model.Yyyymm" />
    @Html.TextBoxFor(model => model.PayslipYyyymm, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" })

    <div class="modal-header">
        <h5 class="modal-title">LoP For Excess Leave</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-xl-12 col-md-12">
                                    <label asp-for="PayslipYyyymm" class="control-label"></label>
                                    <input id="payslipYyyymm" class="form-control datepicker" data-date-format="MMM-yyyy" placeholder="@localizer["Month"]" value="@Model.PayslipYyyymm" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
