@model TCMPLApp.WebApp.Models.ShiftHalfDayDetailsUpdateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Attendance"
      asp-action="ShiftEditTab3"
      id="formShiftEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="Shiftcode" />
    <input type="hidden" asp-for="HdFhStartMi" />
    <input type="hidden" asp-for="HdFhEndMi" />
    <input type="hidden" asp-for="HdShStartMi" />
    <input type="hidden" asp-for="HdShEndMi" />


    <div class="modal-header">
        <h5 class="modal-title">Shift Edit</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@Model.Shiftcode - @Model.Shiftdesc</h5>
            </div>
            <div class="card-block">
                <div class="card-pill">
                    <ul class="nav nav-tabs " id="tabs-tab" role="tablist">
                        <li class="nav-item">

                            <button id="btndetails1" name="submit" type="submit" formnovalidate="" value="Details1" class="nav-link bg-white" aria-selected="false">
                                @localizer["Shift Details"]
                            </button>
                        </li>
                        <li class="nav-item">
                            <button id="btndetails2" name="submit" type="submit" formnovalidate="" value="Details2" class="nav-link bg-white" aria-selected="false">
                                @localizer["Shift Config Details"]
                            </button>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" id="tabs-detail3-tab" data-toggle="pill" href="#tabs-detail3" role="tab" aria-controls="tabs-detail3" aria-selected="true">
                                @localizer["Shift Half Day Details"]
                            </a>
                        </li>
                        <li class="nav-item">
                            <button id="btndetails4" name="submit" type="submit" formnovalidate="" value="Details4" class="nav-link bg-white" aria-selected="false">
                                @localizer["Shift Lunch Time Details"]
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tabs-detail1" role="tabpanel" aria-labelledby="tabs-detail1-tab">
                        <div id="pw-detail2">
                            <div class="modal-body">
                                <div class="card">
                                    <div class="card-block">
                                        <div class="row">
                                            <div class="col-xl-6 col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="HdFhStartMi" class="control-label"></label>
                                                    <input id="hdFhStartMi" class="form-control datetimepicker" value="@Model.HdFhStartMi" placeholder="@localizer["HH:mm"]" required />
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="HdFhEndMi" class="control-label"></label>
                                                    <input id="hdFhEndMi" class="form-control datetimepicker" value="@Model.HdFhEndMi" placeholder="@localizer["HH:mm"]" required />
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-xl-6 col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="HdShStartMi" class="control-label"></label>
                                                    <input id="hdShStartMi" class="form-control datetimepicker" value="@Model.HdShStartMi" placeholder="@localizer["HH:mm"]" required />
                                                </div>
                                            </div>
                                            <div class="col-xl-6 col-md-12">
                                                <div class="form-group">
                                                    <label asp-for="HdShEndMi" class="control-label"></label>
                                                    <input id="hdShEndMi" class="form-control datetimepicker" value="@Model.HdShEndMi" placeholder="@localizer["HH:mm"]" required />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm" name="submit" value="Confirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
    <div id="results" style="display:none">@TempData["Message"]</div>
</form>