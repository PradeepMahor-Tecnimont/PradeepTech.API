@model TCMPLApp.WebApp.Models.FilterDataModel;
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

<form id="extraHoursClaimCreateFilterSet"
      asp-area="SelfService"
      asp-controller="Attendance"
      asp-action="ExtraHoursClaimCreateFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="PostFilterReLoadDataTable(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />
    @Html.TextBoxFor(model => model.StartDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" })

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Filter"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Filters setup"]</h5>
            </div>
            <div class="card-toolbar-modal">
                @*@if (Model.IsFiltered == true)
                    {
                        <a class="btn btn-outline-danger btn-sm border-white"
                           data-action="ResetFilterSession"
                           href="/DynamicForm/Template/ResetFilterSession?controllerName=Template"
                           onclick="resetFilter(event, this);">
                            <i class="fas fa-filter"></i>
                            @localizer["Reset"]
                        </a>
                    }*@
            </div>
            <div class="card-block">
                <div class="form-group">
                    <label class="control-label">Select month</label>
                    <input id="startDateFilter" class="form-control datepickerFilter" data-date-format="mm-yyyy" placeholder="@localizer["Start date"]" value="" />
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>