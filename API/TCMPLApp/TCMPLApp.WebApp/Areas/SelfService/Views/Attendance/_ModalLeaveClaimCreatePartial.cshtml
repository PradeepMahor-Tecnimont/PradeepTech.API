@model TCMPLApp.WebApp.Models.LeaveClaimCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Attendance"
      asp-action="LeaveClaimCreate"
      id="formNewLeaveClaimCreate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.HalfDayDay)
    <input type="hidden" asp-for="@Model.StartDate" />
    <input type="hidden" asp-for="@Model.EndDate" />

    <div class="modal-header">
        <h5 class="modal-title">Leave application</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Leave claim"]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-mb-8 col-xl-8">
                            <label asp-for="Empno" class="control-label"></label>
                            <select asp-for="Empno" class="form-control chosen-select" data-placeholder="Please select..." asp-items="ViewBag.EmployeeList" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Empno" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-mb-6 col-xl-6">
                            <label asp-for="LeaveType" class="control-label"></label>
                            <select asp-for="LeaveType" class="form-control chosen-select" data-placeholder="Please select..." asp-items="ViewBag.LeaveTypes" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="LeaveType" class="text-danger"></span>
                        </div>
                        <div class="col-mb-6 col-xl-6">
                            <label asp-for="LeavePeriod" class="control-label"></label>
                            <input asp-for="LeavePeriod" class="form-control" placeholder="Leave period" required />
                            <span asp-validation-for="LeavePeriod" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-mb-6 col-xl-6">
                            <label asp-for="StartDate" class="control-label"></label>
                            <input id="startDate" class="form-control datepicker" placeholder="@localizer["Start date"]" value="" required />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>
                        <div class="col-mb-6 col-xl-6">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input id="endDate" class="form-control datepicker" placeholder="@localizer["End date"]" value="" required />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col">
                            <div id="divHalfDay">
                                <label asp-for="HalfDayDay" class="control-label"></label>
                                <select id="halfDayDay" class="form-control chosen-select " data-placeholder="Please select..." asp-items="ViewBag.HalfDayDay">
                                    <option selected></option>
                                </select>
                                <span asp-validation-for="HalfDayDay" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" placeholder="Reason" required />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div id="dropZoneWrapper">
                    <div id="iddropzone2" class="dropzone dropzone-design mb-10">
                        <div class="dz-details">
                            <div class="dz-filename"><span data-dz-name></span></div>
                            <div class="dz-size" data-dz-size></div>
                            <img data-dz-thumbnail />
                            <div class="dz-error-message"><span data-dz-errormessage></span></div>
                        </div>
                        <div class="dz-default dz-message" data=""><span>Drop medical certificate file here to upload</span></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnsubmitleaveclaim"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>