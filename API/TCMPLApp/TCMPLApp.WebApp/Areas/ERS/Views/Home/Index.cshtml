                            <h5>HR Vacancies list</h5>
                        </div>
                        <div class="card-block card-tile">
                            <a href="~/ERS/HR/HRVacanciesIndex">
                                <div class="row align-items-center justify-content-center stretched-link">
                                    <div class="col">
                                        <h7 class="mb-2 f-w-300">Get list of vacancies</h7>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-list-alt f-20 text-white theme-brown"></i>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xl-3">
                    <div class="card card-tpl">
                        <div class="card-header">
                            <h5>HR Uploaded CVs</h5>
                        </div>
                        <div class="card-block card-tile">
                            <a href="~/ERS/HR/HRUploadedCVIndex">
                                <div class="row align-items-center justify-content-center stretched-link">
                                    <div class="col">
                                        <h7 class="mb-2 f-w-300">Get list of all uploaded CVs</h7>
                                    </div>
                                    <div class="col-auto">
                                        <i class="fas fa-users f-20 text-white theme-dark-green"></i>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
