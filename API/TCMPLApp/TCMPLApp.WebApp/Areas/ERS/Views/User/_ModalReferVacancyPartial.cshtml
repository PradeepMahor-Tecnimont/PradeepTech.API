@model TCMPLApp.WebApp.Areas.ERS.VacancyReferViewModel;

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="User"
      asp-action="VacancyRefer"
      id="formVacancyRefer"
      data-ajax="true"
      data-ajax-method="post"      
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="onDataTableReloadSuccess;PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">
    
    <input type="hidden" asp-for="VacancyJobKeyId" />

    <div class="modal-header">
        <h5 class="modal-title">Refer vacancy</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@ViewBag.JobReferenceCode - @ViewBag.ShortDesc</h5>
            </div>
            <div class="card-block">                
                <div class="row">
                    <div class="col-xl-6 col-md-6">
                        <div class="form-group">
                            <div class="dt-met">@localizer["Open date"]</div>
                            <div class="dd-met">@ViewBag.JobOpenDate.ToString("dd-MMM-yyyy")</div>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-6">
                        <div class="form-group">
                            <div class="dt-met">@localizer["Job type"]</div>
                            <div class="dd-met">@ViewBag.JobType</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <div class="dt-met">@localizer["Job location"]</div>
                            <div class="dd-met">@ViewBag.JobLocation</div>
                        </div>
                    </div>
                </div>                
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <div class="dt-met">@localizer["Job description 01"]</div>
                            <div class="dd-met">@ViewBag.JobDesc01</div>
                        </div>
                    </div>
                </div>                
                <hr/>
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="form-group">
                            <label asp-for="Pan" class="control-label"></label>
                            <input asp-for="Pan" class="form-control" placeholder="PAN" maxlength="10" required />
                            <span asp-validation-for="Pan" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="form-group">
                            <label asp-for="CandidateName" class="control-label"></label>
                            <input asp-for="CandidateName" class="form-control" placeholder="Candidate name" maxlength="100" required />
                            <span asp-validation-for="CandidateName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="form-group">
                            <label asp-for="CandidateEmail" class="control-label"></label>
                            <input asp-for="CandidateEmail " class="form-control" placeholder="Candidate email" maxlength="100" required />
                            <span asp-validation-for="CandidateEmail" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-xl-12">
                        <div class="form-group">
                            <label asp-for="CandidateMobile" class="control-label"></label>
                            <input asp-for="CandidateMobile" class="form-control" placeholder="0000000000" maxlength="10" />
                            <span asp-validation-for="CandidateMobile" class="text-danger"></span>
                        </div>                        
                    </div>
                 </div>
                 <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <div class="dt-met p-b-2">Upload CV file (file size should not exceed 5 MB) </div>
                            <div id="iddropzone2" class="dropzone dropzone-design mb-10">
                                <div class="dz-details">
                                    <div class="dz-filename"><span data-dz-name></span></div>
                                    <div class="dz-size" data-dz-size></div>
                                    <img data-dz-thumbnail />
                                    <div class="dz-error-message"><span data-dz-errormessage></span></div>
                                </div>
                                <div class="dz-default dz-message" data=""><span>Drop pdf file here to upload</span></div>
                            </div>  
                        </div>                                            
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnReferConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Refer"]">
            @localizer["Refer"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
