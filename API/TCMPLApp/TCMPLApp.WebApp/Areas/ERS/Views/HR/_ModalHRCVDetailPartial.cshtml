@model TCMPLApp.WebApp.Areas.ERS.HRCVDetailViewModel;

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<div class="modal-header">
    <h5 class="modal-title">@localizer["CV detail"]</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>
<div class="modal-body">
    <div class="card">
        <div class="card-header">
            <h5>@Html.DisplayNameFor(model => model.ShortDesc) : @Html.DisplayFor(model => model.ShortDesc)</h5>
        </div>
        <div class="card-block">                
            <div class="row">                
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.CandidateName)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.CandidateName)</div>
                    </div>
                </div>           
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.CandidateEmail)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.CandidateEmail)</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.CandidateMobile)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.CandidateMobile)</div>
                    </div>
                </div>
                <div class="col-xl-6 col-md-6">
                    <div class="form-group">
                        <div class="dt-met">@Html.DisplayNameFor(model => model.Pan)</div>
                        <div class="dd-met">@Html.DisplayFor(model => model.Pan)</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">    
    <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
</div>
