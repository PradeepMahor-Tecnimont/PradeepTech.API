@model TCMPLApp.WebApp.Models.FilterDataModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form class=""
      id="formAssetWithITPoolExcel"
      name="formAssetWithITPoolExcel"
      asp-area="EmpGenInfo"
      asp-controller="Report"
      asp-action="EmployeeAssetWithITPoolExcel"
      accept-charset="UTF-8">

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Asset with IT pool excel"]</h5>
        <button type="button" class="close" data-dismiss="modal" id="closeBtn" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Asset with IT pool excel"]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 ">
                            <label asp-for="AssetCategory" class="control-label"></label>
                            <select asp-for="AssetCategory" class="form-control Select2" asp-items="ViewBag.AssetCategoryList">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" id="btnExportAssetWithITPoolExcel"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <div id="AssetWithITPool_Loader" class="spinner-border text-info text-center hidden "
             style="width: 2.5rem; height: 2.5rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

