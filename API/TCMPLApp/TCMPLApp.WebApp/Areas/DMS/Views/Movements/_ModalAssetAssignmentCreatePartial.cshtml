@model TCMPLApp.WebApp.Models.AssetAssignmentCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="Movements"
      asp-action="AssetAssignmentCreate"
      id="formAssetAssignment"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="Sid" value="@Model.Sid" />
    <input type="hidden" asp-for="Movetype" value="@Model.Movetype" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Asset / employee assignment"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>
                    @if(Model.Movetype == "A")
                    {
                        @Html.Raw("Asset assignment")
                    }
                    else
                    {
                        @Html.Raw("Employee assignment")
                    }                    
                </h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-12 col-md-12">
                            <div class="form-group">
                                <label asp-for="CurrDeskid" class="control-label"></label>
                                <input asp-for="CurrDeskid" class="form-control" readonly required />
                                <span asp-validation-for="CurrDeskid" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-xl-12 col-md-12">
                            <div class="form-group">
                                <label asp-for="Assetid" class="control-label"></label>
                                <input asp-for="Assetid" class="form-control" readonly required />
                                <span asp-validation-for="Assetid" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-md-12">
                            <label asp-for="Deskid" class="control-label"></label>
                            <select asp-for="Deskid" class="form-control Select2" asp-items="ViewBag.TargetAssignmentDeskList" required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="Deskid" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

