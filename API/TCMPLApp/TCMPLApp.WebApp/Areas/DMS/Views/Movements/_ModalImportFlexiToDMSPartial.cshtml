@model TCMPLApp.WebApp.Models.FlexiToDMSImportViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="Movements"
      asp-action="ImportFlexiDeskToDMS"
      id="formFlexiToDMS"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Import flexi desk to DMS"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Import flexi desk to DMS</h5>
            </div>
            <div class="card-block">
                <div class="form-group">                   
                    <div class="row">                        
                        <div class="col-md-12 ">
                            <label asp-for="Deskid" class="control-label"></label>
                            <textarea asp-for="Deskid" class="form-control" rows="3" maxlength="4000" onkeypress="RegularExpressionValidationCheck(event)" onpaste="validatePaste(this, event)" required></textarea>
                            <span asp-validation-for="Deskid" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

