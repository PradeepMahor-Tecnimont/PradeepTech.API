@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Movements"
      asp-action="MovementsXLTemplateUpload"
      asp-area="DMS"      
      id="formMovementsXLUpload"      
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"      
      data-ajax-complete="onSuccess(null);PostSaveReLoadDataTable(data)"
      data-ajax-success=""
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input name="id" id="id" type="hidden" value="@ViewBag.SessionId" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Import movements"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h6>@localizer["Import movements"]</h6>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">                            
                            <button type="button" id="btnMovementsXLTemplate" title="Excel Download" class=" btn btn-sm btn-success mx-2">
                                <i class="far fa-file-excel "></i> Download template
                            </button>
                        </div>
                    </div>
                </div>
                <div id="iddropzone2" class="dropzone dropzone-design mb-10">
                    <div class="dz-details">
                        <div class="dz-filename"><span data-dz-name></span></div>
                        <div class="dz-size" data-dz-size></div>
                        <img data-dz-thumbnail />
                        <div class="dz-error-message"><span data-dz-errormessage></span></div>
                    </div>
                    <div class="dz-default dz-message" data=""><span>Drop excel file here to import</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" id="btnMovementsUpdateXL"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Upload movements"]">
            @localizer["Import"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>