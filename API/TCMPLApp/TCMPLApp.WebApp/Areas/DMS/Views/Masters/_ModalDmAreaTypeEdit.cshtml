@model TCMPLApp.WebApp.Models.DmAreaTypEditViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="Masters"
      asp-action="DmAreaTypeEdit"
      id="formDmAreaTypEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="KeyId" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Area type edit"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>

    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Area type edit</h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="ShortDesc" class="control-label"></label>
                            <input asp-for="ShortDesc" class="form-control" required />
                            <span asp-validation-for="ShortDesc" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-6">
                        <div class="form-group">
                            <label asp-for="IsActive" class="control-label"></label>
                            <select asp-for="IsActive" class="form-control chosen-select" data-placeholder="Please select..." required>
                                <option value="0">No</option>
                                <option value="1">Yes</option>
                            </select>
                            <span asp-validation-for="IsActive" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <textarea asp-for="Description" class="form-control"
                                      placeholder="@localizer["Description"]"
                                      rows="3"
                                      required>
                            </textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

