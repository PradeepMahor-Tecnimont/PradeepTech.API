@model TCMPLApp.WebApp.Models.FilterDataModel

<form class="form-filter-datetime"
      id="formDeskAreaFilterSet"
      asp-area="DMS"
      asp-controller="Masters"
      asp-action="DeskAreaFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="PostFilterReLoadDataTable(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />

    <div class="modal-header">
        <h5 class="modal-title">Desk Area</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group">
                            <label asp-for="IsRestricted" class="control-label"></label>
                            <select asp-for="IsRestricted" class="form-control chosen-select" data-placeholder="Please select...">
                                <option value=""></option>
                                <option value="0">No</option>
                                <option value="1">Yes</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group">
                            <label asp-for="AreaCatgCode" class="control-label"></label>
                            <select asp-for="AreaCatgCode" class="form-control chosen-select" asp-items="ViewBag.AreaCatgCodeList" data-placeholder="Please select...">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                    <div class="col-xl-6 col-md-12">
                        <div class="form-group">
                            <label asp-for="AreaType" class="control-label"></label>
                            <select asp-for="AreaType" class="form-control chosen-select" asp-items="ViewBag.AreaTypeList" data-placeholder="Please select...">
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
