@model TCMPLApp.WebApp.Models.OfficesUpdateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="Masters"
      asp-action="OfficeEdit"
      id="formOffice"
      data-ajax="true"
      data-ajax-update="#modal-content"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.OfficeCode" />
    <div class="modal-header">
        <h5 class="modal-title">@localizer["Office Edit"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Office Edit</h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="OfficeCode" class="control-label"></label>
                            <input asp-for="OfficeCode" class="form-control text-uppercase" required readonly/>
                            <span asp-validation-for="OfficeCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="OfficeName" class="control-label"></label>
                            <input asp-for="OfficeName" class="form-control text-uppercase" required />
                            <span asp-validation-for="OfficeName" class="text-danger"></span>
                        </div>
                    </div>
                </div><div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="OfficeDesc" class="control-label"></label>
                            <textarea asp-for="OfficeDesc" class="form-control" rows="2" required></textarea>
                            <span asp-validation-for="OfficeDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="OfficeLocationCode" class="control-label"></label>
                            <select asp-for="OfficeLocationCode" class="form-control chosen-select" asp-items="ViewBag.OfficeList" data-placeholder="Please select..." required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="OfficeLocationCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="SmartDeskBookingEnabled" class="control-label"></label>
                            <select asp-for="SmartDeskBookingEnabled" class="form-control Select2" required>
                                <option value="" selected>Please select...</option>
                                <option value="OK">Yes</option>
                                <option value="KO">No</option>
                            </select>
                            <span asp-validation-for="SmartDeskBookingEnabled" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

