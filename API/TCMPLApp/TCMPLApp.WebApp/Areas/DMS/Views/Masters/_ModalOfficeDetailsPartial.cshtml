@model TCMPLApp.WebApp.Models.OfficeDetailsViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Master"
      asp-action=""
      id="formOfficeDetails"
      data-ajax="true"
      data-ajax-update="#modal-content"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.OfficeCode" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Office Details"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Office Details</h5>
            </div>
            <div class="card-block p-4">
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.OfficeCode)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.OfficeCode)
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.OfficeName)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.OfficeName)
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.OfficeDesc)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.OfficeDesc)
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.OfficeLocationTxt)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.OfficeLocationTxt)
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 col-md-12">
                            <div class="form-group">
                                <div class="dt-met">
                                    @Html.DisplayNameFor(model => model.SmartDeskBookingEnabledTxt)
                                </div>
                                <div class="dd-met">
                                    @Html.Raw(Model.SmartDeskBookingEnabledTxt)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
