
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form id="formDeskAreaXLUpload"
      asp-controller="Masters"
      asp-action="ImportDMSDeskAreaTemplate"
      asp-area="DMS"      
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"        
      data-ajax-success="onSuccessTab('DeskListDetails');PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" id="areaId" name="areaId" value="@ViewBag.AreaId" />   

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Desk area desk / user import"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Desk area desk / user import"]</h5>
            </div>
            <div class="card-block">               
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-6 col-md-6">
                            <div class="dt-met">@localizer["Area description"]</div>
                            <div class="dd-met">
                                @ViewBag.AreaName
                            </div> 
                        </div>
                        <div class="col-xl-6 col-md-6">
                            <div class="dt-met">@localizer["Area category description"]</div>
                            <div class="dd-met">
                                @ViewBag.AreaCategoryCodeName
                            </div>
                        </div>
                    </div>
                </div>
                <hr/>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-12 col-md-12">
                            <label class="control-label">@localizer["Select office"]</label>                            
                            <select id="selOfficeLocation" class="form-control chosen-select" asp-items="ViewBag.OfficeLocation" data-placeholder="Please select..." required>
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xl-12 col-md-12">
                            <label class="control-label">@localizer["Select type"]</label>
                            <select id="seldeskAreaTemplateType" class="form-control chosen-select" data- placeholder="Select..." required>
                                <option value=""></option>
                                <option value="Desk">Desks list</option>
                                <option value="User">Users list</option>                                
                            </select>                            
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">                            
                            <button type="button" id="btnDeskAreaImportTemplate" title="Excel template Download" class=" btn btn-sm btn-success mx-2" disabled>
                                <i class="far fa-file-excel"></i> Download template
                            </button>
                        </div>
                    </div>
                </div>
                <div id="iddropzone2" class="dropzone dropzone-design mb-10">
                    <div class="dz-details">
                        <div class="dz-filename"><span data-dz-name></span></div>
                        <div class="dz-size" data-dz-size></div>
                        <img data-dz-thumbnail />
                        <div class="dz-error-message"><span data-dz-errormessage></span></div>
                    </div>
                    <input type="hidden" id="deskAreaTemplateType" name="deskAreaTemplateType" value="" />
                    <input type="hidden" id="deskAreaOfficeLocation" name="deskAreaOfficeLocation" value="" />
                    <div class="dz-default dz-message" data=""><span>Drop excel file here to import</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" id="btnImportDeskAreaXL"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Desk area desk / user import"]">
            @localizer["Import"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
