@model TCMPLApp.WebApp.Models.FilterDataModel
@{
    string ModuleName = ViewBag.ModuleName;
    string urlFilter = ("genericFilterReloadDatatabe(data,'" + ModuleName + "');");
}
<form class="form-filter-datetime"
      id="formDeskAreaDeskListFilterSet"
      asp-area="DMS"
      asp-controller="Masters"
      asp-action="DeskAreaDeskListFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success=@urlFilter
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />


    <div class="modal-header">
        <h5 class="modal-title">Filter</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
                <div class="form-group">
                    <label asp-for="Office" class="control-label"></label>
                    <select asp-for="Office" class="form-control chosen-select" data-placeholder="Please select..." asp-items="ViewBag.OfficeList">
                        <option selected></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Floor" class="control-label"></label>
                    <select asp-for="Floor" class="form-control chosen-select" data-placeholder="Please select..." asp-items="ViewBag.FloorList">
                        <option selected></option>
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Cabin" class="control-label"></label>
                    <select asp-for="Cabin" class="form-control chosen-select" >
                        <option value="" selected>Please select...</option>
                        <option value="N">No</option>
                        <option value="Y">Yes</option>
                        <option value="C">Cabin</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
