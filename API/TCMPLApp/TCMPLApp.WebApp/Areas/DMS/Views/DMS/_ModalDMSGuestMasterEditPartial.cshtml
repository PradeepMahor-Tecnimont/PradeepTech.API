@model TCMPLApp.WebApp.Models.DMSGuestMasterUpdateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="DMS"
      asp-action="DMSGuestMasterEdit"
      id="formDMSGuestMasterEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.GuestEmpNo" />
    <input type="hidden" asp-for="@Model.CostCode" />

    @Html.TextBoxFor(model => model.FromDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" })
    @Html.TextBoxFor(model => model.ToDate, "{0:dd-MMM-yyyy}", htmlAttributes: new { @type = "hidden" })


    <div class="modal-header">
        <h5 class="modal-title">@localizer["Guest master Edit"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Guest master Edit</h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="GuestName" class="control-label"></label>
                            <input asp-for="GuestName" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="CostCode" class="control-label"></label>
                            <select asp-for="CostCode" class="form-control Select2" asp-items="ViewBag.CostCodeList" data-placeholder="Please select..." required disabled>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="CostCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="ProjNo7" class="control-label"></label>
                            <select asp-for="ProjNo7" class="form-control Select2" asp-items="ViewBag.ProjNo7List" data-placeholder="Please select..." required>
                                <option selected></option>
                            </select>
                            <span asp-validation-for="ProjNo7" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="FromDate" class="control-label"></label>
                            <input id="fromDate" class="form-control  " placeholder="@localizer["From date"]" value="@Model.FromDate?.ToString("dd-MMM-yyyy")" required disabled />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>
                    </div>
                </div> <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="ToDate" class="control-label"></label>
                            <input id="toDate" class="form-control datepickerFilter" placeholder="@localizer["To date"]" value="@Model.ToDate?.ToString("dd-MMM-yyyy")" required />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label class="control-label">Current Desk</label>
                            <label class="form-control"> @Model.TargetDesk </label>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewTargetDesk" class="control-label"></label>
                            <select asp-for="NewTargetDesk" class="form-control Select2" asp-items="ViewBag.TargetDeskList" data-placeholder="Please select...">
                                <option selected></option>
                            </select>
                            <span asp-validation-for="NewTargetDesk" class="text-danger"></span>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

