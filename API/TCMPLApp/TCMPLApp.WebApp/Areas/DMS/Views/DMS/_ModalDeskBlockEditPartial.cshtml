@model TCMPLApp.WebApp.Models.DeskBlockCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form asp-controller="DMS"
      asp-action="DeskBlockEdit"
      id="formDeskBlock"
      data-ajax="true"
      data-ajax-method="post"      
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">
    
    <input type="hidden" asp-for="Deskid" />
    <div class="modal-header">
        <h5 class="modal-title">@localizer["Edit desk block"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">            
            <div class="card-header">
                <h5>Deskid - @Model.Deskid </h5>
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Remarks" class="control-label"></label>
                            <input asp-for="Remarks" class="form-control" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xl-12 col-md-12">
                        <div class="form-group">
                            <label asp-for="Blockreason" class="control-label"></label>
                            <select asp-for="Blockreason" class="form-control Select2-required" asp-items="ViewBag.BlockReasonList" data-placeholder="Please select..." required>
                                <option selected></option>
                            </select>
                        </div>
                    </div>
                </div>                
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnConfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

