@model TCMPLApp.WebApp.Models.FilterDataModel

<form class="form-filter-datetime"
      id="formAssetMapWithEmpFilterSet"
      asp-area="DMS"
      asp-controller="DMS"
      asp-action="AssetMapWithEmpFilterSet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="PostFilterReLoadDataTable(data);"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />

    <div class="modal-header">
        <h5 class="modal-title">Asset Map With Employee Filter Set</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>Filters setup</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
                <div class="form-group">
                    <label asp-for="AssetType" class="control-label"></label>
                    <select asp-for="AssetType" class="form-control chosen-select" asp-items="ViewBag.ItemTypeList" multiple="multiple">
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="GroupType" class="control-label"></label>
                    <select asp-for="GroupType" class="form-control chosen-select" data-placeholder="Please select...">
                        <option selected></option>
                        <option value="All">All</option>
                        <option value="Assets">Assets</option>
                        <option value="Consumables">Consumables</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>Waiting...'
                data-text="Confirm">
            Confirm
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
    </div>
</form>
