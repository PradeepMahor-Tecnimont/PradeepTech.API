@model TCMPLApp.WebApp.Models.FilterDataModel;
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()
<form id="xLDownloadAssetOnHoldFilterGet" name="xLDownloadAssetOnHoldFilterGet"
      asp-area="AssetOnHold"
      asp-controller="DMS"
      asp-action="XLDownloadAssetOnHoldFilterGet"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);"
      data-ajax-success="onSuccess(null)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <input type="hidden" asp-for="@Model.IsFiltered" />

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Excel Download"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Excel Download"]</h5>
            </div>
            <div class="card-toolbar-modal">
            </div>
            <div class="card-block">
               @* <div class="form-group">
                    <label asp-for="ActionType" class="control-label"></label>
                    <select asp-for="ActionType" class="form-control chosen-select "
                            data-placeholder="Please select..." asp-items="ViewBag.ActionTypeList">
                        <option></option>
                    </select>
                </div>*@
                <div class="form-group">
                    <label asp-for="AssetCategory" class="control-label"></label>
                    <select asp-for="AssetCategory" class="form-control chosen-select "
                            data-placeholder="Please select..." asp-items="ViewBag.AssetCategoryList">
                        <option></option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="button" id="btnexportplanning"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>@localizer["Waiting..."]'
                data-text="@localizer["Export"]">
            <i class="fas fa-file-excel green-color"></i>&nbsp;&nbsp;@localizer["Export"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>