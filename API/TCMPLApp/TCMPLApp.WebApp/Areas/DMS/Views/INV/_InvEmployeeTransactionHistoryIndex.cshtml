@model TCMPLApp.WebApp.Models.InvEmployeeTransactionDetailViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

<div class="card">
    <div class="card-table">
        <div class="table-responsive">
            <div class="input-group pt-1 pl-1 pr-1 ">
                <input type="text" class="form-control form-control-sm border" id="GenericSearchHistory" name="GenericSearchHistory" placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-sm btn-outline-info" type="button" id="buttonSearchHistory"><i class="fa fa-search"></i></button>
                </div>
            </div>
            <table id="tbGridInvEmployeeTransactionHistory" class="table table-striped table-bordered table-responsive-lg">
                @if ((bool)@Context.Items["isMobile"] == false)
                {
                    <thead class="bg-info text-white">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TransDateString)</th>
                            <th>@Html.DisplayNameFor(model => model.TransType)</th>
                            <th>@Html.DisplayNameFor(model => model.Barcode)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemTypeDesc)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemId)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemDetails)</th>
                            <th>@Html.DisplayNameFor(model => model.ItemUsable)</th>
                            <th></th>
                        </tr>
                    </thead>
                }
            </table>
        </div>
    </div>
</div>
