@model TCMPLApp.WebApp.Models.InvItemGroupBulkCreateViewModel

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()


<form asp-controller="INV"
      asp-action="InvItemGroupXLUpload"
      asp-area="DMS"
      id="formInvGroupsXLUpload"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin($('btnname'))"
      data-ajax-complete="onComplete(null);loadScript()"
      data-ajax-success="onSuccess(null);PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">




    <div class="modal-header">
        <h5 class="modal-title">@localizer["Item group upload"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Item group upload"]</h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-12 ">
                            <label asp-for="ItemGroupDesc" class="control-label"></label>
                            <input asp-for="ItemGroupDesc" class="form-control" placeholder="Description" required />
                            <span asp-validation-for="ItemGroupDesc" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">
                            &nbsp;
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12 col-xl-6">

                            <button type="button" name="GroupsXLTemplate" id="btnInvGroupsXLTemplate" title="Excel Download" class=" btn btn-sm btn-outline-primary mx-2">
                                <i class="far fa-file-excel "></i> Download template
                            </button>
                        </div>
                    </div>
                </div>

                <div id="iddropzone2" class="dropzone dropzone-design mb-10">
                    <div class="dz-details">
                        <div class="dz-filename"><span data-dz-name></span></div>
                        <div class="dz-size" data-dz-size></div>
                        <img data-dz-thumbnail />
                        <div class="dz-error-message"><span data-dz-errormessage></span></div>
                    </div>
                    <div class="dz-default dz-message" data=""><span>Drop excel file here to upload</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-outline-primary" type="button" id="btnUploadInvGroupsXL"
                data-loading-text='<span class="spinner-border spinner-border-sm" role="diagram"></span>@localizer["Waiting..."]'
                data-text="@localizer["Upload Groups"]">
            @localizer["Upload Groups"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>
