@model TCMPLApp.WebApp.Models.RapHoursCreateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Transactions"
      asp-action="RapHoursCreate"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="PostSave(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Create rap hours"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Rap hours - create"]</h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Yymm" class="control-label"></label>
                            <input asp-for="Yymm" class="form-control" type="number" value="@Model.Yymm" required />
                            <span asp-validation-for="Yymm" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="WorkDays" class="control-label"></label>
                            <input asp-for="WorkDays" class="form-control" type="number" placeholder="0" />
                            <span asp-validation-for="WorkDays" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Weekend" class="control-label"></label>
                            <input asp-for="Weekend" class="form-control" type="number" value="@Model.Weekend" placeholder="0" />
                            <span asp-validation-for="Weekend" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Holidays" class="control-label"></label>
                            <input asp-for="Holidays" class="form-control" type="number" value="@Model.Holidays" placeholder="0" />
                            <span asp-validation-for="Holidays" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Leave" class="control-label"></label>
                            <input asp-for="Leave" class="form-control" type="number" value="@Model.Leave" placeholder="0" />
                            <span asp-validation-for="Leave" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="TotDays" class="control-label"></label>
                            <input asp-for="TotDays" class="form-control" type="number" value="@Model.TotDays" placeholder="0" />
                            <span asp-validation-for="TotDays" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="WorkingHr" class="control-label"></label>
                            <input asp-for="WorkingHr" class="form-control" type="number" value="@Model.WorkingHr" placeholder="0" />
                            <span asp-validation-for="WorkingHr" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">&nbsp;</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>


