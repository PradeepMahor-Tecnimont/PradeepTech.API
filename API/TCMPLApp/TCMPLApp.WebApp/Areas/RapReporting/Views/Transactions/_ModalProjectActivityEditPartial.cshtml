@model TCMPLApp.WebApp.Models.ProjactUpdateViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form id="formProjectActivityEdit"
      asp-controller="Transactions"
      asp-action="ProjectActivityEdit"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null)"
      data-ajax-success="onDataTableReloadSuccess;postSaveReLoadDataTable(data.success)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">

    @Html.HiddenFor(m => m.Activity)

    <div class="modal-header">
        <h5 class="modal-title">@localizer["Project actvity - edit"]</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Project actvity - edit"]</h5>
            </div>
            <div class="card-block">

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Projno" class="control-label"></label>
                            <input asp-for="Projno" class="form-control" readonly placeholder="" value="@Model.Projno" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Costcode" class="control-label"></label>
                            <input asp-for="Costcode" class="form-control" readonly placeholder="" value="@Model.Costcode" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <label asp-for="Activity" class="control-label"></label>
                            <input id="activityName" class="form-control" readonly placeholder="" value="@ViewBag.ActivityName" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="Budghrs" class="control-label"></label>
                            <input asp-for="Budghrs" class="form-control" type="number" required />
                            <span asp-validation-for="Budghrs" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NoOfDocs" class="control-label"></label>
                            <input asp-for="NoOfDocs" class="form-control" type="number" required />
                            <span asp-validation-for="NoOfDocs" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-primary" type="submit" id="btnconfirm"
                data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
                data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
        </button>
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

