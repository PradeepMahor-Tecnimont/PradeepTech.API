@model TCMPLApp.WebApp.Models.TSPostedHoursViewModel;

@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Timesheet Posted Hours";
    const string actionName = "ManageIndex";
    const string controllerName = "Transactions";
}

@section BreadCrumbs
{
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><a asp-action="Index" asp-controller="Home" asp-area="RapReporting">Rap Reporting</a></li>
        <li class="breadcrumb-item "><a asp-action="ManageIndex" asp-controller="Transactions" asp-area="RapReporting">Manage</a></li>
        <li class="breadcrumb-item active" aria-current="page">Timesheet Posted Hours</li>
    </ol>
}
@section Styles {
    <link href="@Url.Content("~/css/drome-style.css")" rel="stylesheet" type="text/css" asp-append-version="true" />
}
<a asp-action="TimesheetPostedHoursIndex" id="homepage" asp-controller="Transactions" asp-area="RapReporting" class="hidden">Rap Reporting</a>
<input id="Yyyymm" readonly type="hidden" asp-for="@Model.FilterDataModel.Yyyymm" />
<input id="Yyyy" readonly type="hidden" asp-for="@Model.FilterDataModel.Yyyy" />
<input id="YearMode" readonly type="hidden" asp-for="@Model.FilterDataModel.YearMode" />

<div class="row p-2 m-2">
    <div class="container-fluid bg-white border rounded shadow m-auto col-xl-12 p-2 ">
        <div class="app-h4 app-card-header mb-2">
            <p>
                Timesheet Posted Hours <label id="label" class="control-label" style="font-weight:bold"></label>
            </p>
        </div>
        <div role="toolbar" class="m-2">
            <button id="filterGet" type="button" class="btn btn-secondary btn-sm border-white"
                    data-jqueryselector="openmodal"
                    data-modalcontainer="modalcontainer"
                    data-modalpopupwidth="rightw35"
                    data-url='@Url.Action("FilterGet", "Home", new { Area = "RapReporting" })'
                    data-modaltitle="Filter"
                    data-modalheader="Filter">
                <i class="fas fa-filter"></i>&nbsp;Filter ::

                @if (!string.IsNullOrEmpty(Model.FilterDataModel.Yyyy))
                {
                    @Html.Raw(localizer["Year : "] + Model.FilterDataModel.Yyyy)
                    ;
                }
                @if (!string.IsNullOrEmpty(Model.FilterDataModel.YearMode))
                {
                    @Html.Raw(localizer[", Year mode : "] + (Model.FilterDataModel.YearMode == "A" ? "April - March" : "January - December"))
                    ;
                }
                @if (!string.IsNullOrEmpty(Model.FilterDataModel.Yyyymm))
                {
                    @Html.Raw(localizer[", Year month : "] + (Model.FilterDataModel.Yyyymm.Substring(4, 2) == "01" ? "Jan " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "02" ? "Feb " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "03" ? "Mar " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "04" ? "Apr " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "05" ? "May " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "06" ? "Jun " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "07" ? "Jul " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "08" ? "Aug " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "09" ? "Sep " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "10" ? "Oct " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : Model.FilterDataModel.Yyyymm.Substring(4, 2) == "11" ? "Nov " + Model.FilterDataModel.Yyyymm.Substring(0, 4)
                             : "Dec " + Model.FilterDataModel.Yyyymm.Substring(0, 4)))
                    ;
                }

            </button>

        </div>
        <div class="d-flex flex-row">
            <div id="repostAndMove">
                @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.RapReporting.RapReportingHelper.ActionProcoTrans))
                {
                    @if (CurrentUserIdentity.ProfileActions.Any(p => p.ActionId == TCMPLApp.Domain.Models.RapReporting.RapReportingHelper.ActionRAPAdmin))
                    {
                        @if (ViewBag.MsgType == "OK")
                        {

                            <a class="btn btn-outline-danger btn-sm mr-5 ml-2"
                               href="#"
                               title="lock Repost and Move Month"
                               onclick="showDeleteConfirmationPopup(event,this);"
                               data-url="@Url.Action("LockRepostAndUpdateProcessingMonth", "Transactions", new { Area = "RapReporting" })"
                               data-postsavereloaddatatable="OK"
                               data-yymm="@Model.FilterDataModel.Yyyymm"
                               data-modaltitle="Please Confirm!"
                               data-confirmationtext="Are you sure you want to Force-Lock Repost and Move Month ?"
                               data-confirmationtype="warning"
                               data-confirmbuttontext="Force-Lock Repost">
                                <i class="fas fa-lock"></i> Lock Reposting
                            </a>
                        }
                        else
                        {
                            <a title="Unlock Repost and Move Month"
                               href="#"
                               style="width:auto"
                               class="btn btn-outline-success btn-sm mr-5 ml-2"
                               onclick="showDeleteConfirmationPopup(event,this);"
                               data-url="@Url.Action("UnLockRepostAndUpdateProcessingMonth", "Transactions", new { Area = "RapReporting" })"
                               data-postsavereloaddatatable="OK"
                               data-yymm="@Model.FilterDataModel.Yyyymm"
                               data-modaltitle="Please Confirm!"
                               data-confirmationtext="Are you sure you want to Force-Unlock Repost and Move Month ?"
                               data-confirmationtype="warning"
                               data-confirmbuttontext="Force-Unlock Repost ">
                                <i class="fas fa-unlock"></i> Unlock Reposting
                            </a>
                        }
                    }

                    @if (ViewBag.MsgType == "OK")
                    {
                        <a title="Reposting"
                           href="#"
                           id="repostAndMove"
                           class="btn btn-outline-primary btn-sm mr-5 ml-5"
                           onclick="showDeleteConfirmationPopup(event,this);"
                           data-url="@Url.Action("Repost", "Transactions", new { Area = "RapReporting" })"
                           data-PostSaveReLoadDataTable="OK"
                           data-yymm="@Model.FilterDataModel.Yyyymm"
                           data-modaltitle="Please Confirm!"
                           data-confirmationtext="Are you sure you want to mark current month as Posted ?"
                           data-confirmationtype="warning"
                           data-confirmbuttontext="Reposting">
                            <i class="fas fa-retweet"></i> Reposting (@ViewBag.PostingCount)
                        </a>
                        @if (ViewBag.PostingCount != 0)
                        {
                            <a title="Move"
                               href="#"
                               id="Move"
                               class="btn btn-outline-primary btn-sm mr-5 ml-5"
                               onclick="showDeleteConfirmationPopup(event,this);"
                               data-url="@Url.Action("UpdateProcessingMonth", "Transactions", new { Area = "RapReporting" })"
                               data-PostSaveReLoadDataTable="OK"
                               data-yymm="@Model.FilterDataModel.Yyyymm"
                               data-modaltitle="Please Confirm!"
                               data-confirmationtext="Are you sure you want to mark current month as Posted and proceed to next month ?"
                               data-confirmationtype="warning"
                               data-confirmbuttontext="Move">
                                <i class="fas fa-calendar"></i> Move To Next Month
                            </a>
                        }
                    }
                }
            </div>
            <a style="float:right;" class="btn btn-outline-success btn-sm border border-white mx-2 ml-auto"
               href="#"
               data-jqueryselector="binarydownload"
               data-url="@(Url.Action("TSPostedHoursExcelDownload", "Transactions", new { Area = "RapReporting", yyyymm = @Model.FilterDataModel.Yyyymm }))">
                <i class="fas fa-file-excel green-color"></i>&nbsp;Export
            </a>
        </div>
        <div class="m-1"></div>
        <div class="bg-gray-active rounded ">
            <div class="TSPostedHours"></div>
            <table id="tbTimesheet" class="table table-striped table-bordered table-responsive-lg ">
                <thead class="bg-info text-white">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Assign)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromTimeMast)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromTimeDailyOt)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromTimetran)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromOscMaster)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromOscDetail)</th>
                        <th>@Html.DisplayNameFor(model => model.PFromTimetranOsc)</th>
                    </tr>
                </thead>
            </table>
            <div id="result"></div>
        </div>
    </div>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/site-rap.js" asp-append-version="true"></script>
    <script>

        $(document).ready(function () {
            if ($('#Yyyy').val() == null || $('#Yyyy').val() == '' ||
                $('#YearMode').val() == null || $('#YearMode').val() == '' ||
                $('#Yyyymm').val() == null || $('#Yyyymm').val() == '') {
                $("#filterGet").click();
            }
            var yearmonth = $('#Yyyymm').val();
            loadTSPostedHoursDataTable();
            loadTSPostedHours(yearmonth);
            localScript();
        });

        function localScript() {
            initSelect2();
            var MsgType = '@ViewBag.MsgType';
            var procMonth = '@ViewBag.ProcMonth';
            var yearmonth = $('#Yyyymm').val();

            if (procMonth != yearmonth) {
                $('#repostAndMove').hide();
                $("#label").text("(Reposting and move to next month is done)");
            }
            else {
                if (MsgType != "OK") {
                    $("#label").text("(Currently reposting utility is locked)");
                }
                else {
                    if (@ViewBag.PostingCount!= 0) {
                        $("#label").text("(Currently reposting utility and move to next month is enable)");
                    }
                    else {
                        $("#label").text("(Currently reposting utility is enable)");
                    }
                }
            }

            var yearMonthListUrl = "@Url.Action("GetYearMonthList", "Home", new { Area = "RapReporting" })";
            callRapReportingFilterListeners(yearMonthListUrl);

            if ($('#Yyyy').val() == null || $('#Yyyy').val() == '' ||
                $('#YearMode').val() == null || $('#YearMode').val() == '' ||
                $('#Yyyymm').val() == null || $('#Yyyymm').val() == '') {
                hideFilterCancelButton('HIDE');
            }
            else {
                hideFilterCancelButton('SHOW');
            }

            var cancelButtonRedirectUrl = "@Url.Action("RedirectPage", "Home", new
            {
                Area = "RapReporting",
                actionName = @actionName,
                controllerName = @controllerName
            })";
            callCancelButtonListeners(cancelButtonRedirectUrl);

            callFilterDefaultsListeners();

        };

        let vVUloadTSPostedHoursList = '@Url.Action("GetListsTSPostedHours", "Transactions")';

        function loadTSPostedHoursDataTable() {
            genericLoadDataTable({
                pDataTableId: "#tbTimesheet",
                pColumns: datatableColumns,
                pUrl: vVUloadTSPostedHoursList,
                pUrlParams: {
                    genericSearch: $('#GenericSearch').val() ? $('#GenericSearch').val() : null,
                    yyyymm: $('#Yyyymm').val() ? $('#Yyyymm').val() : null,
                },
                pRequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()

            });
        };

        @if ((bool)@Context.Items["isMobile"] == false)
        {
            <text>

                let datatableColumns = [
                    { data: "assign" },
                    { data: "pFromTimeMast" },
                    { data: "pFromTimeDailyOt" },
                    { data: "pFromTimetran" },
                    { data: "pFromOscMaster" },
                    { data: "pFromOscDetail" },
                    { data: "pFromTimetranOsc" }
                ];

            </text>
        };

        $("#GenericSearch").keypress(function (event) {
            if (event.keyCode === 13) {
                if ($("#GenericSearch").length) {
                    loadTSPostedHoursDataTable();
                }
            }
        });

        $('#buttonSearch').on('click', function () {

            if ($("#GenericSearch").length) {
                loadTSPostedHoursDataTable();
            }
        });
        function PostSave(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                loadTSPostedHoursDataTable();
                notify('success', data.response, 'Success');
            }
        };
        function PostDeleteReLoadDataTables(data) {
            if (data.success) {
                loadTSPostedHoursDataTable();
                hideLoader();
                notify('success', data.message, 'Success');
            }
        }
        function PostSaveReLoadDataTable(data) {
            if (data.success) {
                $("#modalcontainer").modal('hide');
                hideLoader();
                notify('success', data.response, 'Success');
                location.reload();
            }

        }

        function loadTSPostedHours(yearmonth) {
            $.ajax({
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                url: '@Url.Action("GetTSPostedHoursTotal", "Transactions", new { Area = "RapReporting" })',
                type: 'GET',
                cache: true,
                dataType: "json",
                data: {
                    yyyymm: yearmonth
                },
                beforeSend: function () {
                    showLoader();
                },
                success: function (data) {
                    if (data.error) {
                    }
                    else {
                        var vCPTable = "";
                        vCPTable += '<div class="col-sm-12 p-0 m-0">';
                        vCPTable += '<div class="card"> ';

                        vCPTable += '<div class="card-body"> <div class="row"> ';

                        vCPTable += '<div class="col-6 col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2 mt-2"> <div class="card card-tile m-0"> <div class="card-block border  rounded-sm  theme-light-cyan" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300"> Timemast </h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;">' + data.pTimeMastTotal + '</h4> </div> </div> </div> </div>    ';

                        vCPTable += ' <div class=" col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2"><div class="card card-tile m-0">';

                        vCPTable += '<div class="card-block  border  rounded-sm  theme-light-orange" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300 text-wrap"> Daily + OT</h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;"> ' + data.pTimeDailyOtTotal + '</h4> </div> </div> </div> </div> ';
                        vCPTable += '<div class=" col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2"> <div class="card card-tile m-0"> <div class="card-block border  rounded-sm  theme-light-green" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300"> Timetran </h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;"> ' + data.pTimetranTotal + '</h4> </div> </div> </div> </div>    ';
                        vCPTable += '<div class=" col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2"> <div class="card card-tile m-0"> <div class="card-block border  rounded-sm  theme-light-yellow" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300"> Osc Master </h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;">' + data.pOscMasterTotal + ' </h4> </div> </div> </div> </div>    ';
                        vCPTable += '<div class=" col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2"> <div class="card card-tile m-0"> <div class="card-block border  rounded-sm  theme-light-blue" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300"> Osc Details   </h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;">' + data.pOscDetailTotal + '</h4> </div> </div> </div> </div>    ';
                        vCPTable += '<div class=" col-6 col-md-3 col-sm-4 col-lg-2 col-xl-2 mt-2"> <div class="card card-tile m-0"> <div class="card-block border  rounded-sm  theme-light-grey" style=" padding: 5px 10px 5px 10px;"> ';
                        vCPTable += '<div class="col m-0 p-0"> <h6 class="mb-2 f-w-300"> Timetran Osc </h6> <h4 class="text-muted mb-0 text-right font-weight-bold" style=" margin-top: 20px;">' + data.pTimetranOscTotal + ' </h4> </div> </div> </div> </div> ';

                        vCPTable += '</div>';
                        $("div.TSPostedHours").html(vCPTable);

                    }
                    hideLoader();
                },
                error: function (request, status, error) {
                    notify('error', request.responseText, 'danger');
                    hideLoader();
                }
            });
        }
    </script>
}