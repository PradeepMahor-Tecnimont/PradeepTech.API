@model TCMPLApp.WebApp.Models.ExpectedJobsViewModel
@inject TCMPLApp.WebApp.Services.SharedViewLocalizer localizer

@Html.AntiForgeryToken()

<form asp-controller="Transactions"
      asp-action=""
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update=""
      data-ajax-begin="onBegin(null)"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-failure="onError"
      accept-charset="UTF-8">


    <div class="modal-header">
        <h5 class="modal-title">Details expected jobs</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card">
            <div class="card-header">
                <h5>@localizer["Details expected jobs"]</h5>
            </div>
            <div class="card-block">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="Projno" class="control-label"></label>
                            <input id="projno" class="form-control" value="@Model.Projno" readonly />
                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="Name" class="control-label"></label>
                            <input id="name" class="form-control" value="@Model.Name" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="Active" class="control-label"></label>
                            @if (Model.Active == 1)
                            {
                                <input id="activeYes" class="form-control" value="Yes" readonly />
                            }
                            else if (Model.Active == 0)
                            {
                                <input id="activeNo" class="form-control" value="No" readonly />
                            }
                            else
                            {
                                <input id="activeNull" class="form-control" value="" readonly />
                            }

                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="Bu" class="control-label"></label>
                            <input id="Bu" class="form-control" value="@Model.Bu" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="Activefuture" class="control-label"></label>
                            @if (Model.Activefuture == 1)
                            {
                                <input id="activefutureYes" class="form-control" value="Yes" readonly />
                            }
                            else if (Model.Activefuture == 0)
                            {
                                <input id="activefutureNo" class="form-control" value="No" readonly />
                            }
                            else
                            {
                                <input id="activefutureNull" class="form-control" value="" readonly />
                            }

                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="FinalProjno" class="control-label"></label>
                            <input id="finalProjno" class="form-control" value="@Model.FinalProjno" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="Newcostcode" class="control-label"></label>
                            <input id="newcostcode" class="form-control" value="@Model.Newcostcode" readonly />
                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="Tcmno" class="control-label"></label>
                            <input id="tcmno" class="form-control" value="@Model.Tcmno" readonly />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-6 ">
                            <label asp-for="Lck" class="control-label"></label>
                            @if (Model.Lck == 1)
                            {
                                <input id="lckYes" class="form-control" value="Yes" readonly />
                            }
                            else if (Model.Lck == 0)
                            {
                                <input id="lckNo" class="form-control" value="No" readonly />
                            }
                            else
                            {
                                <input id="lckNull" class="form-control" value="" readonly />
                            }

                        </div>
                        <div class="col-md-6 ">
                            <label asp-for="ProjType" class="control-label"></label>
                            <input id="projType" class="form-control" value="@Model.ProjType" readonly />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        @* <button class="btn btn-primary" type="submit" id="btnconfirm"
            data-loading-text='<span class="spinner-border spinner-border-sm" role=""></span>@localizer["Waiting..."]'
            data-text="@localizer["Confirm"]">
            @localizer["Confirm"]
            </button>*@
        <button class="btn btn-secondary" type="button" data-dismiss="modal">@localizer["Cancel"]</button>
    </div>
</form>

