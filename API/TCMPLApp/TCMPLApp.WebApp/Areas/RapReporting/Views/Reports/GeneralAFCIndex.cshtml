                    <div class="card-block card-tile">
                        <a id="lauditorSubcontractorWise" href="#"
                       data-inprogress="0"
                       data-jqueryselector="generatereport"
                       data-url="@Url.Action("Auditor_Subcontractor_wise", "Reports",new {Area ="RapReporting",
                                                                                    yymm = @Model.FilterDataModel.Yyyymm,
                                                                                yearmode = @Model.FilterDataModel.YearMode})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="lauditorSubcontractorWise_Text" class="mb-2 f-w-300"></h7>
                                    <div class="text-center">
                                        <div id="lauditorSubcontractorWise_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
