            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>Covid manhrs distribution</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="lcovidManhrsDistribution" href="#"
                       data-inprogress="0"
                       data-jqueryselector="generatereport"
                       data-url="@Url.Action("AFC_CovidManhrsDistribution", "Reports", new {Area ="RapReporting",
                                                                            projno = @Model.FilterDataModel.Projno ,
                                                                            costCode = @Model.FilterDataModel.CostCode})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="lcovidManhrsDistribution_Text" class="mb-2 f-w-300">Covid manhrs distribution.</h7>
                                    <div class="text-center">
                                        <div id="lcovidManhrsDistribution_Loader" class="spinner-border text-info text-center hidden "
