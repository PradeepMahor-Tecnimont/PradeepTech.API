@section Scripts{

    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script src="~/js/site-rap.js" asp-append-version="true"></script>
<script>

    $(document).ready(function () {
        if ($('#Yyyy').val() == null || $('#Yyyy').val() == '' ||
            $('#YearMode').val() == null || $('#YearMode').val() == '' ||
            $('#Yyyymm').val() == null || $('#Yyyymm').val() == '') {
            $("#filterGet").click();
        }

        var option_all = $('#EmployeeTypeList').find(':selected').map(function () {
            return $(this).val();
        }).get().join(',');
        $('#EmpTypeList').val(option_all);
    });
        
    function localScript() {
        initSelect2();

        var yearMonthListUrl = "@Url.Action("GetYearMonthList", "Home", new {Area = "RapReporting"})";
        callRapReportingFilterListeners(yearMonthListUrl);

        var cancelButtonRedirectUrl = "@Url.Action("RedirectPage", "Home", new {Area = "RapReporting",
                                                                                actionName = @actionName,
                                                                                controllerName = @controllerName})";
        callCancelButtonListeners(cancelButtonRedirectUrl);
        callReportTypeListener();
        //callRapReportingPartialReportListeners();
        calllReportTypeReportListener();

        $('#CostCenter').change(function (e) {
            var selectedCostCenter = $('#CostCenter').find(':selected');
            $('#CostCode').val(selectedCostCenter[0].value);

            setDownlodUrl();
        });

        $('#ProjectNo').change(function (e) {
            var selectedProjectNo = $('#ProjectNo').find(':selected');
            $('#Projno').val(selectedProjectNo[0].value);

            setDownlodUrl();
        });

        var emptype_option_all = $('#EmployeeTypeList').find(':selected').map(function () {
            return $(this).val();
        }).get().join(',');

        $('#EmpTypeList').val(emptype_option_all);

        setDownlodUrl();

        $('#EmployeeTypeList').change(function (e) {
            var option_all = $('#EmployeeTypeList').find(':selected').map(function () {
                return $(this).val();
            }).get().join(',');

            $('#EmpTypeList').val(option_all);            
        });

        $('#lafcsapreport').on('click', function () {
            setdownlodurl();            
        });
        
        

        
        
        
    }

</script>
}