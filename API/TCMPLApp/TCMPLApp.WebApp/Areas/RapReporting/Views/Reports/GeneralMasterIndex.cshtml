                                <div class="col">
                                    <h7 id="lprojact_Text" class="mb-2 f-w-300">Master of Project Activity</h7>
                                    <div class="text-center">
                                        <div id="lprojact_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </div>
                                    &#160;
                                </div>
                                <div id="lprojact_Icon" class="col-auto">
                                    <i class="fas fa-cogs f-20 text-white theme-capri"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>Activity</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="llistact" title="Activity report" href="#" 
                       data-jqueryselector="openmodal"
                       data-modalcontainer="modalcontainer"
                       data-modalpopupwidth="rightw50"
                       data-url="@Url.Action("ListACT", "Reports",new {Area ="RapReporting"})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="llistact_Text" class="mb-2 f-w-300">Master of Activity</h7>
                                    <div class="text-center">
                                        <div id="llistact_Loader" class="spinner-border text-info text-center hidden "
                                            style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </div>
                                    &#160;
                                </div>
                                <div id="llistact_Icon" class="col-auto">
                                    <i class="fas fa-cogs f-20 text-white theme-capri"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>TLPCodes Master</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="ltlpcodesmaster" href="#"
                       data-inprogress="0"
                       data-jqueryselector="generatereport"
                       data-url="@Url.Action("TLP_Codes_Master", "Reports",new {Area ="RapReporting"})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="ltlpcodesmaster_Text" class="mb-2 f-w-300">Master of TLP Codes</h7>
                                    <div class="text-center">
                                        <div id="ltlpcodesmaster_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </div>
                                    &#160;
                                </div>
                                <div id="ltlpcodesmaster_Icon" class="col-auto">
                                    <i class="fas fa-cogs f-20 text-white theme-capri"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>Employee List (Assign)</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="llistemp" href="#"
                       data-jqueryselector="openmodal"
                       data-modalcontainer="modalcontainer"
                       data-modalpopupwidth="rightw50"
                       data-url="@Url.Action("LISTEMP", "Reports",new {Area ="RapReporting"})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="llistemp_Text" class="mb-2 f-w-300">Employee Master - Assign</h7>
                                    <div class="text-center">
                                        <div id="llistemp_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </div>
                                    &#160;
                                </div>
                                <div id="llistemp_Icon" class="col-auto">
                                    <i class="fas fa-cogs f-20 text-white theme-capri"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>Employee List (Parent)</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="llistempParent" href="#"
                       data-jqueryselector="openmodal"
                       data-modalcontainer="modalcontainer"
                       data-modalpopupwidth="rightw50"
                       data-url="@Url.Action("LISTEMPParent", "Reports",new {Area ="RapReporting"})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="llistempParent_Text" class="mb-2 f-w-300">Employee Master - Parent</h7>
                                    <div class="text-center">
                                        <div id="llistempParent_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </div>
                                    &#160;
                                </div>
                                <div id="llistempParent_Icon" class="col-auto">
                                    <i class="fas fa-cogs f-20 text-white theme-capri"></i>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-xl-4">
                <div class="card card-tpl">
                    <div class="card-header">
                        <h5>Project Activity (Project)</h5>
                    </div>
                    <div class="card-block card-tile">
                        <a id="llistactproj" href="#"
                       data-jqueryselector="openmodal"
                       data-modalcontainer="modalcontainer"
                       data-modalpopupwidth="rightw50"
                       data-url="@Url.Action("LISTACTPROJ", "Reports",new {Area ="RapReporting"})">
                            <div class="row align-items-center justify-content-center stretched-link">
                                <div class="col">
                                    <h7 id="llistactproj_Text" class="mb-2 f-w-300">Project Activity List</h7>
                                    <div class="text-center">
                                        <div id="llistactproj_Loader" class="spinner-border text-info text-center hidden "
                                         style="width: 2.5rem; height: 2.5rem;" role="status">
                                            <span class="sr-only">Loading...</span>
