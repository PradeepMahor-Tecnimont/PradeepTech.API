@model TCMPLApp.Domain.Models.SWPVaccine.SwpVuEmpResponse
@{

    ViewData["Title"] = "Smart Working Policy";

}

<div class="container col-lg-4 col-md-6 col-sm-12">
    <div class="row">
        <div class="card bg-light mb-3 shadow-3">
            <div class="card-header app-h4 app-card-header">
                TCMPL Policy on Smart Working
            </div>
            <div class="card-body">
                <div class="container">
                    <div class="stepwizard col-md-offset-3 ">
                        <div class="stepwizard-row setup-panel">
                            <div class="stepwizard-step">
                                <span data-status="@Model.IsPolicyAccepted" class="dot ">1</span>
                                <!--<a href="#step-1" type="button" class="btn btn-success btn-circle">1</a>-->
                                <p>User Accepted the Policy - @Model.IsPolicyAccepted</p>
                            </div>
                            <div class="stepwizard-step">
                                <span data-status="@Model.IsHodApproved" class="dot">2</span>
                                <!--<a href="#step-2" type="button" class="btn btn-warning btn-circle" disabled="disabled">2</a>-->
                                <p>HoD Approval - @Model.IsHodApproved</p>
                            </div>
                            <div class="stepwizard-step">
                                <span data-status="@Model.IsHrApproved" class="dot">3</span>
                                <!--<a href="#step-3" type="button" class="btn btn-warning btn-circle" disabled="disabled">3</a>-->
                                <p>HR Validation - @Model.IsHrApproved</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .dot[data-status="Yes"] {
        background-color: #28a745 !important;
        color: white;
    }

    .dot[data-status="No"] {
        background-color: #dc3545 !important;
        color: white;
    }

    .dot[data-status="Pending"] {
        background-color: #ffc107 !important;
    }

    .dot[data-status="Approved"] {
        background-color: #28a745 !important;
        color: white;
    }

    .dot[data-status="Rejected"] {
        background-color: #dc3545 !important;
        color: white;
    }

    .dot[data-status="N.A."] {
        background-color: #bbb !important;
    }

    p {
        font-size: small;
    }

    .dot {
        height: 25px;
        width: 25px;
        background-color: #bbb;
        border-radius: 50%;
        display: inline-block;
    }

    .stepwizard-step p {
        margin-top: 10px;
    }

    .stepwizard-row {
        display: table-row;
    }

    .stepwizard {
        display: table;
        width: 100%;
        position: relative;
    }

    .stepwizard-step button[disabled] {
        opacity: 1 !important;
        filter: alpha(opacity=100) !important;
    }

    .stepwizard-row:before {
        top: 14px;
        bottom: 0;
        position: absolute;
        content: " ";
        width: 100%;
        height: 1px;
        background-color: #ccc;
        z-order: 0;
    }

    .stepwizard-step {
        display: table-cell;
        text-align: center;
        position: relative;
        width: 33%;
        padding-right: 15px;
    }

    .btn-circle {
        width: 30px;
        height: 30px;
        text-align: center;
        padding: 6px 0;
        font-size: 12px;
        line-height: 1.428571429;
        border-radius: 15px;
    }
</style>
@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
