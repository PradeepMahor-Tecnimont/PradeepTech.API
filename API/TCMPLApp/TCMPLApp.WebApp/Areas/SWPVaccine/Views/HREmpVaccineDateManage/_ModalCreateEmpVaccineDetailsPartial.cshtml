@model TCMPLApp.WebApp.Models.VaccineEmpCreateViewModel
@{

    ViewData["Title"] = "Vaccine Jab Date";

    Html.AntiForgeryToken();

}
<form asp-controller="HREmpVaccineDateManage"
      asp-action="CreateEmpVaccineDetails"
      id="formCreateEmpVaccineDetails"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-update="#modal-content"
      data-ajax-begin="onBegin(null)"
      data-ajax-complete="onComplete(null);localScript()"
      data-ajax-success="PostSaveReLoadDataTable(data)"
      data-ajax-failure="onError"
      accept-charset="UTF-8">
    <div class="modal-header">
        <h5 class="modal-title">Add vaccine details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
    </div>
    <div class="modal-body">
        <div class="card bg-light mb-3 shadow-3">
            <div class="card-header app-h4 app-card-header">
                Add vaccine details
            </div>
            <div class="card-body">
                <div class="form-group ">
                    <div class="row">
                        <div class="col">
                            <label class="control-label" asp-for="Empno"></label>
                            <select asp-for="Empno" required class="Select2 form-control" asp-items="ViewBag.EmployeeList">
                                <option></option>
                            </select>
                            <span asp-validation-for="Empno" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                <div class="form-group ">
                    <div class="row">
                        <div class="col-6">
                            <label class="control-label" asp-for="VaccineType"></label>
                            <select asp-for="VaccineType" id="vaccineType" required class="Select2 form-control" asp-items="ViewBag.VaccineTypes">
                                <option></option>
                            </select>
                            <span asp-validation-for="VaccineType" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                @*<div class="form-group ">
                    <div class="row">
                    <div class="col-6">
                    <div class="dt-met">@Html.DisplayNameFor(model => model.FirstJabSponsorOffice) </div>
                    <div class="dd-met">@((Model.FirstJabSponsorOffice?? "KO") == "OK" ? "Office" : "Self") </div>
                    </div>
                    </div>
                    </div>*@

                <div class="form-group ">
                    <div class="row">
                        <div class="col-6">
                            <label class="control-label" asp-for="FirstJab"></label>
                            <input type="date" class="form-control " id="secondJabDate" asp-for="FirstJab" required>
                            <span asp-validation-for="FirstJab" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label class="control-label" asp-for="SecondJab"></label>
                            <input type="date" class="form-control " id="secondJabDate" asp-for="SecondJab">
                            <span asp-validation-for="SecondJab" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group ">
                    <div class="row">
                        <div class="col-6">
                            <label class="control-label" asp-for="BoosterJab"></label>
                            <input type="date" class="form-control " id="BoosterJab" asp-for="BoosterJab">
                            <span asp-validation-for="BoosterJab" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="submit" class="btn btn-sm btn-primary">Submit</button>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <button class="btn btn-sm btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                </div>
                <div id="results" style="display:none">@TempData["Message"]</div>
            </div>
        </div>
    </div>
</form>
