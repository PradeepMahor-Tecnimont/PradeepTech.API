@model IEnumerable< TCMPLApp.Domain.Models.SWPVaccine.SwpBusRoute>

<div class="modal-header">
    <h5 class="modal-title">Bus Route</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
</div>

<div class="modal-body">
    <div class="card bg-light border-0">
        <div class="card-header app-h4 app-card-header">
            <p id="modalheader">Bus Routes</p>
        </div>
        <div class="modal-body">
            <table id="busRoutes" class="table table-striped table-bordered  " style="width:100%;">
                <thead class="bg-info text-white">
                    <tr>
                        <th>RouteNumber</th>
                        <th style="width : 80%" width="80">Route Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var br in Model)
                    {
                        <tr>
                            <td><a href="#" class="busRouteId btn btn-outline-primary border-0">@br.RouteId</a></td>
                            @*<td>@br.RouteId</td>*@
                            <td style="width:80%" width="80">@br.PickupPoints</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="modal-footer">
            <button class="btn btn-primary" type="submit" id="btnconfirm"
                    data-loading-text='<span class="spinner-border spinner-border-sm" role="status"></span>"Waiting..."'
                    data-text="Confirm">
                Confirm
            </button>
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>