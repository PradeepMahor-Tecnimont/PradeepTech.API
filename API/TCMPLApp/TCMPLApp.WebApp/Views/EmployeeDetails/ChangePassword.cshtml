@model TCMPLApp.WebApp.Models.ChangePasswordViewModel
@{

    ViewData["Title"] = "Employee Details";

}

<form method="post" asp-controller="EmployeeDetails" asp-action="ChangePassword">
    @Html.AntiForgeryToken();
    <div class="container parentcontent-div col-md-6 col-xl-4">

        <div class="card login-form bg-light mb-3 shadow-3">
            <div class="card-header app-h4 app-card-header">
                Timesheet / CV
            </div>
            <div class="card-body">
                <div class="container">
                    <h3 class="card-title text-center text-muted">Change password</h3>

                    <!--Password must contain one lowercase letter, one number, and be at least 7 characters long.-->

                    <div class="card-text">
                        <div class="form-group">
                            <label asp-for="NewPassword" class="cotrol-label"></label>
                            <input type="password" asp-for="NewPassword" class="form-control form-control-sm">
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="cotrol-label"></label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control form-control-sm">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block submit-btn">Confirm</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>
@section Scripts
{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}